{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o nov15_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-15%2Fdummy_eid_timestamp_cb_Nov15.csv.gz?Expires=1387134493&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=l5YUfvIdP97Mo%2BytDYLmY%2BqmwMc%3D'", "\n",
                "curl -o nov15_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-15%2Fcore_eid_timestamp_cb_Nov15.csv.gz?Expires=1387133835&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=5hgVLsAs9PU0bC5AwJTzIm7mIA0%3D'", "\n",
               "gunzip nov15_dummy.gz", "\n",
                "gunzip nov15_core.gz", "\n",
                "wc -l nov15_dummy > nov15_dummy_cnt", "\n",
                "wc -l nov15_core > nov15_core_cnt", "\n",
                "cut -d , -f1 nov15_dummy > nov15_dummy_eids", "\n",
                "cut -d , -f1 nov15_core > nov15_core_eids", "\n",
                "cut -d , -f1,3 nov15_dummy > nov15_dummy_ts", "\n",
                "cut -d , -f1,3 nov15_core > nov15_core_ts", "\n",        
                "cut -d , -f1,4 nov15_dummy > nov15_dummy_cbc", "\n",
                "cut -d , -f1,4 nov15_core > nov15_core_cbc", "\n",  
                "curl -o nov16_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-16%2Fdummy_eid_timestamp_cb_Nov16.csv.gz?Expires=1387375085&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=GYyVX4F5qZNcgfK%2BtMLUXw9f70A%3D'", "\n",
                "curl -o nov16_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-16%2Fcore_eid_timestamp_cb_Nov16.csv.gz?Expires=1387374416&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=J3GpmJV2SIQgzBAn8cZ%2BP4Xxm8g%3D'", "\n",
                "gunzip nov16_dummy.gz", "\n",
                "gunzip nov16_core.gz", "\n",
                "wc -l nov16_dummy > nov16_dummy_cnt", "\n",
                "wc -l nov16_core > nov16_core_cnt", "\n",
                "cut -d , -f1 nov16_dummy > nov16_dummy_eids", "\n",
                "cut -d , -f1 nov16_core > nov16_core_eids", "\n",
                "cut -d , -f1,3 nov16_dummy > nov16_dummy_ts", "\n",
                "cut -d , -f1,3 nov16_core > nov16_core_ts", "\n",        
                "cut -d , -f1,4 nov16_dummy > nov16_dummy_cbc", "\n",
                "cut -d , -f1,4 nov16_core > nov16_core_cbc", "\n",                  
                "comm -2 -3 nov15_dummy_eids nov16_dummy_eids > nov15_dummy_eids_unique", "\n",
                "comm -1 -3 nov15_dummy_eids nov16_dummy_eids > nov16_dummy_eids_unique", "\n",                
                "comm -2 -3 nov15_core_eids nov16_core_eids > nov15_core_eids_unique", "\n",
                "comm -1 -3 nov15_core_eids nov16_core_eids > nov16_core_eids_unique", "\n",   
                "comm -2 -3 nov15_dummy_ts nov16_dummy_ts > nov15_dummy_ts_unique", "\n",
                "comm -1 -3 nov15_dummy_ts nov16_dummy_ts > nov16_dummy_ts_unique", "\n",                
                "comm -2 -3 nov15_core_ts nov16_core_ts > nov15_core_ts_unique", "\n",
                "comm -1 -3 nov15_core_ts nov16_core_ts > nov16_core_ts_unique", "\n", 
                "comm -2 -3 nov15_dummy_cbc nov16_dummy_cbc > nov15_dummy_cbc_unique", "\n",
                "comm -1 -3 nov15_dummy_cbc nov16_dummy_cbc > nov16_dummy_cbc_unique", "\n",                
                "comm -2 -3 nov15_core_cbc nov16_core_cbc > nov15_core_cbc_unique", "\n",
                "comm -1 -3 nov15_core_cbc nov16_core_cbc > nov16_core_cbc_unique", "\n",
                "wc -l nov15_dummy_eids_unique > nov15_dummy_eids_unique_cnt", "\n",
                "wc -l nov16_dummy_eids_unique > nov16_dummy_eids_unique_cnt", "\n",
                "wc -l nov15_core_eids_unique > nov15_core_eids_unique_cnt", "\n",
                "wc -l nov16_core_eids_unique > nov16_core_eids_unique_cnt", "\n",
                "wc -l nov15_dummy_ts_unique > nov15_dummy_ts_unique_cnt", "\n",
                "wc -l nov16_dummy_ts_unique > nov16_dummy_ts_unique_cnt", "\n",
                "wc -l nov15_core_ts_unique > nov15_core_ts_unique_cnt", "\n",
                "wc -l nov16_core_ts_unique > nov16_core_ts_unique_cnt", "\n",                
                "wc -l nov15_dummy_cbc_unique > nov15_dummy_cbc_unique_cnt", "\n",
                "wc -l nov16_dummy_cbc_unique > nov16_dummy_cbc_unique_cnt", "\n",
                "wc -l nov15_core_cbc_unique > nov15_core_cbc_unique_cnt", "\n",
                "wc -l nov16_core_cbc_unique > nov16_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}