{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec07_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-07%2Fdummy_eid_timestamp_cb_Dec07.csv.gz?Expires=1389191519&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=8pwC6tSEErdd1u4ZtktW4fusK%2Bk%3D'", "\n",
                "curl -o dec07_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-07%2Fcore_eid_timestamp_cb_Dec07.csv.gz?Expires=1389191519&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=KWAdCWKlrpyE6RBC77Bi5Y9fxws%3D'", "\n",
                "gunzip dec07_dummy.gz", "\n",
                "gunzip dec07_core.gz", "\n",
                "wc -l dec07_dummy > dec07_dummy_cnt", "\n",
                "wc -l dec07_core > dec07_core_cnt", "\n",
                "cut -d , -f1 dec07_dummy > dec07_dummy_eids", "\n",
                "cut -d , -f1 dec07_core > dec07_core_eids", "\n",
                "cut -d , -f1,3 dec07_dummy > dec07_dummy_ts", "\n",
                "cut -d , -f1,3 dec07_core > dec07_core_ts", "\n",        
                "cut -d , -f1,4 dec07_dummy > dec07_dummy_cbc", "\n",
                "cut -d , -f1,4 dec07_core > dec07_core_cbc", "\n",  
                "curl -o dec08_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-08%2Fdummy_eid_timestamp_cb_Dec08.csv.gz?Expires=1389191870&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=heh91aXZf7QDOeyn3svQCRTkwl4%3D'", "\n",
                "curl -o dec08_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-08%2Fcore_eid_timestamp_cb_Dec08.csv.gz?Expires=1389191870&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=IFQXR7pr%2FNcaxyHuKJrbazUCA1E%3D'", "\n",
                "gunzip dec08_dummy.gz", "\n",
                "gunzip dec08_core.gz", "\n",
                "wc -l dec08_dummy > dec08_dummy_cnt", "\n",
                "wc -l dec08_core > dec08_core_cnt", "\n",
                "cut -d , -f1 dec08_dummy > dec08_dummy_eids", "\n",
                "cut -d , -f1 dec08_core > dec08_core_eids", "\n",
                "cut -d , -f1,3 dec08_dummy > dec08_dummy_ts", "\n",
                "cut -d , -f1,3 dec08_core > dec08_core_ts", "\n",        
                "cut -d , -f1,4 dec08_dummy > dec08_dummy_cbc", "\n",
                "cut -d , -f1,4 dec08_core > dec08_core_cbc", "\n",                  
                "comm -2 -3 dec07_dummy_eids dec08_dummy_eids > dec07_dummy_eids_unique", "\n",
                "comm -1 -3 dec07_dummy_eids dec08_dummy_eids > dec08_dummy_eids_unique", "\n",                
                "comm -2 -3 dec07_core_eids dec08_core_eids > dec07_core_eids_unique", "\n",
                "comm -1 -3 dec07_core_eids dec08_core_eids > dec08_core_eids_unique", "\n",   
                "comm -2 -3 dec07_dummy_ts dec08_dummy_ts > dec07_dummy_ts_unique", "\n",
                "comm -1 -3 dec07_dummy_ts dec08_dummy_ts > dec08_dummy_ts_unique", "\n",                
                "comm -2 -3 dec07_core_ts dec08_core_ts > dec07_core_ts_unique", "\n",
                "comm -1 -3 dec07_core_ts dec08_core_ts > dec08_core_ts_unique", "\n", 
                "comm -2 -3 dec07_dummy_cbc dec08_dummy_cbc > dec07_dummy_cbc_unique", "\n",
                "comm -1 -3 dec07_dummy_cbc dec08_dummy_cbc > dec08_dummy_cbc_unique", "\n",                
                "comm -2 -3 dec07_core_cbc dec08_core_cbc > dec07_core_cbc_unique", "\n",
                "comm -1 -3 dec07_core_cbc dec08_core_cbc > dec08_core_cbc_unique", "\n",
                "wc -l dec07_dummy_eids_unique > dec07_dummy_eids_unique_cnt", "\n",
                "wc -l dec08_dummy_eids_unique > dec08_dummy_eids_unique_cnt", "\n",
                "wc -l dec07_core_eids_unique > dec07_core_eids_unique_cnt", "\n",
                "wc -l dec08_core_eids_unique > dec08_core_eids_unique_cnt", "\n",
                "wc -l dec07_dummy_ts_unique > dec07_dummy_ts_unique_cnt", "\n",
                "wc -l dec08_dummy_ts_unique > dec08_dummy_ts_unique_cnt", "\n",
                "wc -l dec07_core_ts_unique > dec07_core_ts_unique_cnt", "\n",
                "wc -l dec08_core_ts_unique > dec08_core_ts_unique_cnt", "\n",                
                "wc -l dec07_dummy_cbc_unique > dec07_dummy_cbc_unique_cnt", "\n",
                "wc -l dec08_dummy_cbc_unique > dec08_dummy_cbc_unique_cnt", "\n",
                "wc -l dec07_core_cbc_unique > dec07_core_cbc_unique_cnt", "\n",
                "wc -l dec08_core_cbc_unique > dec08_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}