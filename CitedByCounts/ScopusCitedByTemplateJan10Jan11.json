{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan10_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-10%2Fdummy_eid_timestamp_cb_Jan10.csv.gz?Expires=1397425800&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=3Dr%2BIBifOkvf2%2BRJqYj3j8tNS%2BY%3D'", "\n",
                "curl -o jan10_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-10%2Fcore_eid_timestamp_cb_Jan10.csv.gz?Expires=1397425800&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=v1NxNfj7LQH16EQYUJR%2Fjv%2FcxGg%3D'", "\n",
                "gunzip jan10_dummy.gz", "\n",
                "gunzip jan10_core.gz", "\n",
                "wc -l jan10_dummy > jan10_dummy_cnt", "\n",
                "wc -l jan10_core > jan10_core_cnt", "\n",
                "cut -d , -f1 jan10_dummy > jan10_dummy_eids", "\n",
                "cut -d , -f1 jan10_core > jan10_core_eids", "\n",
                "cut -d , -f1,3 jan10_dummy > jan10_dummy_ts", "\n",
                "cut -d , -f1,3 jan10_core > jan10_core_ts", "\n",        
                "cut -d , -f1,4 jan10_dummy > jan10_dummy_cbc", "\n",
                "cut -d , -f1,4 jan10_core > jan10_core_cbc", "\n",  
                "curl -o jan11_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-11%2Fdummy_eid_timestamp_cb_Jan11.csv.gz?Expires=1397426153&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=8O5tR2Qa1knWh2%2FDKNh6gZnqWWs%3D'", "\n",
                "curl -o jan11_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-11%2Fcore_eid_timestamp_cb_Jan11.csv.gz?Expires=1397426153&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=jCjFUH1bOtlrM6HOC7myRawF9wk%3D'", "\n",
                "gunzip jan11_dummy.gz", "\n",
                "gunzip jan11_core.gz", "\n",
                "wc -l jan11_dummy > jan11_dummy_cnt", "\n",
                "wc -l jan11_core > jan11_core_cnt", "\n",
                "cut -d , -f1 jan11_dummy > jan11_dummy_eids", "\n",
                "cut -d , -f1 jan11_core > jan11_core_eids", "\n",
                "cut -d , -f1,3 jan11_dummy > jan11_dummy_ts", "\n",
                "cut -d , -f1,3 jan11_core > jan11_core_ts", "\n",        
                "cut -d , -f1,4 jan11_dummy > jan11_dummy_cbc", "\n",
                "cut -d , -f1,4 jan11_core > jan11_core_cbc", "\n",                  
                "comm -2 -3 jan10_dummy_eids jan11_dummy_eids > jan10_dummy_eids_unique", "\n",
                "comm -1 -3 jan10_dummy_eids jan11_dummy_eids > jan11_dummy_eids_unique", "\n",                
                "comm -2 -3 jan10_core_eids jan11_core_eids > jan10_core_eids_unique", "\n",
                "comm -1 -3 jan10_core_eids jan11_core_eids > jan11_core_eids_unique", "\n",   
                "comm -2 -3 jan10_dummy_ts jan11_dummy_ts > jan10_dummy_ts_unique", "\n",
                "comm -1 -3 jan10_dummy_ts jan11_dummy_ts > jan11_dummy_ts_unique", "\n",                
                "comm -2 -3 jan10_core_ts jan11_core_ts > jan10_core_ts_unique", "\n",
                "comm -1 -3 jan10_core_ts jan11_core_ts > jan11_core_ts_unique", "\n", 
                "comm -2 -3 jan10_dummy_cbc jan11_dummy_cbc > jan10_dummy_cbc_unique", "\n",
                "comm -1 -3 jan10_dummy_cbc jan11_dummy_cbc > jan11_dummy_cbc_unique", "\n",                
                "comm -2 -3 jan10_core_cbc jan11_core_cbc > jan10_core_cbc_unique", "\n",
                "comm -1 -3 jan10_core_cbc jan11_core_cbc > jan11_core_cbc_unique", "\n",
                "wc -l jan10_dummy_eids_unique > jan10_dummy_eids_unique_cnt", "\n",
                "wc -l jan11_dummy_eids_unique > jan11_dummy_eids_unique_cnt", "\n",
                "wc -l jan10_core_eids_unique > jan10_core_eids_unique_cnt", "\n",
                "wc -l jan11_core_eids_unique > jan11_core_eids_unique_cnt", "\n",
                "wc -l jan10_dummy_ts_unique > jan10_dummy_ts_unique_cnt", "\n",
                "wc -l jan11_dummy_ts_unique > jan11_dummy_ts_unique_cnt", "\n",
                "wc -l jan10_core_ts_unique > jan10_core_ts_unique_cnt", "\n",
                "wc -l jan11_core_ts_unique > jan11_core_ts_unique_cnt", "\n",                
                "wc -l jan10_dummy_cbc_unique > jan10_dummy_cbc_unique_cnt", "\n",
                "wc -l jan11_dummy_cbc_unique > jan11_dummy_cbc_unique_cnt", "\n",
                "wc -l jan10_core_cbc_unique > jan10_core_cbc_unique_cnt", "\n",
                "wc -l jan11_core_cbc_unique > jan11_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}