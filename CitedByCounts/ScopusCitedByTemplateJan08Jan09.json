{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan08_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-08%2Fdummy_eid_timestamp_cb_Jan08.csv.gz?Expires=1396982241&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=v5ER6cqOLRNYWAXix9SYC9L6TTk%3D'", "\n",
                "curl -o jan08_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-08%2Fcore_eid_timestamp_cb_Jan08.csv.gz?Expires=1396982241&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=dFbWkJWN7i5%2BTNu1RrXJK6aJYUc%3D'", "\n",
                "gunzip jan08_dummy.gz", "\n",
                "gunzip jan08_core.gz", "\n",
                "wc -l jan08_dummy > jan08_dummy_cnt", "\n",
                "wc -l jan08_core > jan08_core_cnt", "\n",
                "cut -d , -f1 jan08_dummy > jan08_dummy_eids", "\n",
                "cut -d , -f1 jan08_core > jan08_core_eids", "\n",
                "cut -d , -f1,3 jan08_dummy > jan08_dummy_ts", "\n",
                "cut -d , -f1,3 jan08_core > jan08_core_ts", "\n",        
                "cut -d , -f1,4 jan08_dummy > jan08_dummy_cbc", "\n",
                "cut -d , -f1,4 jan08_core > jan08_core_cbc", "\n",  
                "curl -o jan09_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-09%2Fdummy_eid_timestamp_cb_Jan09.csv.gz?Expires=1397080564&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Q4VLv%2BRwF2umQOTJUW7DGYHEeW8%3D'", "\n",
                "curl -o jan09_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-09%2Fcore_eid_timestamp_cb_Jan09.csv.gz?Expires=1397080564&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=hwz1OMHRxBXiPBE35LYrh9KHtZs%3D'", "\n",
                "gunzip jan09_dummy.gz", "\n",
                "gunzip jan09_core.gz", "\n",
                "wc -l jan09_dummy > jan09_dummy_cnt", "\n",
                "wc -l jan09_core > jan09_core_cnt", "\n",
                "cut -d , -f1 jan09_dummy > jan09_dummy_eids", "\n",
                "cut -d , -f1 jan09_core > jan09_core_eids", "\n",
                "cut -d , -f1,3 jan09_dummy > jan09_dummy_ts", "\n",
                "cut -d , -f1,3 jan09_core > jan09_core_ts", "\n",        
                "cut -d , -f1,4 jan09_dummy > jan09_dummy_cbc", "\n",
                "cut -d , -f1,4 jan09_core > jan09_core_cbc", "\n",                  
                "comm -2 -3 jan08_dummy_eids jan09_dummy_eids > jan08_dummy_eids_unique", "\n",
                "comm -1 -3 jan08_dummy_eids jan09_dummy_eids > jan09_dummy_eids_unique", "\n",                
                "comm -2 -3 jan08_core_eids jan09_core_eids > jan08_core_eids_unique", "\n",
                "comm -1 -3 jan08_core_eids jan09_core_eids > jan09_core_eids_unique", "\n",   
                "comm -2 -3 jan08_dummy_ts jan09_dummy_ts > jan08_dummy_ts_unique", "\n",
                "comm -1 -3 jan08_dummy_ts jan09_dummy_ts > jan09_dummy_ts_unique", "\n",                
                "comm -2 -3 jan08_core_ts jan09_core_ts > jan08_core_ts_unique", "\n",
                "comm -1 -3 jan08_core_ts jan09_core_ts > jan09_core_ts_unique", "\n", 
                "comm -2 -3 jan08_dummy_cbc jan09_dummy_cbc > jan08_dummy_cbc_unique", "\n",
                "comm -1 -3 jan08_dummy_cbc jan09_dummy_cbc > jan09_dummy_cbc_unique", "\n",                
                "comm -2 -3 jan08_core_cbc jan09_core_cbc > jan08_core_cbc_unique", "\n",
                "comm -1 -3 jan08_core_cbc jan09_core_cbc > jan09_core_cbc_unique", "\n",
                "wc -l jan08_dummy_eids_unique > jan08_dummy_eids_unique_cnt", "\n",
                "wc -l jan09_dummy_eids_unique > jan09_dummy_eids_unique_cnt", "\n",
                "wc -l jan08_core_eids_unique > jan08_core_eids_unique_cnt", "\n",
                "wc -l jan09_core_eids_unique > jan09_core_eids_unique_cnt", "\n",
                "wc -l jan08_dummy_ts_unique > jan08_dummy_ts_unique_cnt", "\n",
                "wc -l jan09_dummy_ts_unique > jan09_dummy_ts_unique_cnt", "\n",
                "wc -l jan08_core_ts_unique > jan08_core_ts_unique_cnt", "\n",
                "wc -l jan09_core_ts_unique > jan09_core_ts_unique_cnt", "\n",                
                "wc -l jan08_dummy_cbc_unique > jan08_dummy_cbc_unique_cnt", "\n",
                "wc -l jan09_dummy_cbc_unique > jan09_dummy_cbc_unique_cnt", "\n",
                "wc -l jan08_core_cbc_unique > jan08_core_cbc_unique_cnt", "\n",
                "wc -l jan09_core_cbc_unique > jan09_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}