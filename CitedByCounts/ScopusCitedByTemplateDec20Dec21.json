{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec20_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-20%2Fdummy_eid_timestamp_cb_Dec20.csv.gz?Expires=1396790473&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Ph8yrsqMTTTnWuB8YDBgsT%2Fe8Ks%3D'", "\n",
                "curl -o dec20_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-20%2Fcore_eid_timestamp_cb_Dec20.csv.gz?Expires=1396790473&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=NjGS5zULWxhmdrHf%2Bh8pQx9RdeI%3D'", "\n",
                "gunzip dec20_dummy.gz", "\n",
                "gunzip dec20_core.gz", "\n",
                "wc -l dec20_dummy > dec20_dummy_cnt", "\n",
                "wc -l dec20_core > dec20_core_cnt", "\n",
                "cut -d , -f1 dec20_dummy > dec20_dummy_eids", "\n",
                "cut -d , -f1 dec20_core > dec20_core_eids", "\n",
                "cut -d , -f1,3 dec20_dummy > dec20_dummy_ts", "\n",
                "cut -d , -f1,3 dec20_core > dec20_core_ts", "\n",        
                "cut -d , -f1,4 dec20_dummy > dec20_dummy_cbc", "\n",
                "cut -d , -f1,4 dec20_core > dec20_core_cbc", "\n",  
                "curl -o dec21_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-21%2Fdummy_eid_timestamp_cb_Dec21.csv.gz?Expires=1396791567&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=wWSI0cLKsg6bddspOcS7JEbPefY%3D'", "\n",
                "curl -o dec21_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-21%2Fcore_eid_timestamp_cb_Dec21.csv.gz?Expires=1396791567&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=nfjQDWf3piWCdaD%2Fby82jaaZ7hs%3D'", "\n",
                "gunzip dec21_dummy.gz", "\n",
                "gunzip dec21_core.gz", "\n",
                "wc -l dec21_dummy > dec21_dummy_cnt", "\n",
                "wc -l dec21_core > dec21_core_cnt", "\n",
                "cut -d , -f1 dec21_dummy > dec21_dummy_eids", "\n",
                "cut -d , -f1 dec21_core > dec21_core_eids", "\n",
                "cut -d , -f1,3 dec21_dummy > dec21_dummy_ts", "\n",
                "cut -d , -f1,3 dec21_core > dec21_core_ts", "\n",        
                "cut -d , -f1,4 dec21_dummy > dec21_dummy_cbc", "\n",
                "cut -d , -f1,4 dec21_core > dec21_core_cbc", "\n",                  
                "comm -2 -3 dec20_dummy_eids dec21_dummy_eids > dec20_dummy_eids_unique", "\n",
                "comm -1 -3 dec20_dummy_eids dec21_dummy_eids > dec21_dummy_eids_unique", "\n",                
                "comm -2 -3 dec20_core_eids dec21_core_eids > dec20_core_eids_unique", "\n",
                "comm -1 -3 dec20_core_eids dec21_core_eids > dec21_core_eids_unique", "\n",   
                "comm -2 -3 dec20_dummy_ts dec21_dummy_ts > dec20_dummy_ts_unique", "\n",
                "comm -1 -3 dec20_dummy_ts dec21_dummy_ts > dec21_dummy_ts_unique", "\n",                
                "comm -2 -3 dec20_core_ts dec21_core_ts > dec20_core_ts_unique", "\n",
                "comm -1 -3 dec20_core_ts dec21_core_ts > dec21_core_ts_unique", "\n", 
                "comm -2 -3 dec20_dummy_cbc dec21_dummy_cbc > dec20_dummy_cbc_unique", "\n",
                "comm -1 -3 dec20_dummy_cbc dec21_dummy_cbc > dec21_dummy_cbc_unique", "\n",                
                "comm -2 -3 dec20_core_cbc dec21_core_cbc > dec20_core_cbc_unique", "\n",
                "comm -1 -3 dec20_core_cbc dec21_core_cbc > dec21_core_cbc_unique", "\n",
                "wc -l dec20_dummy_eids_unique > dec20_dummy_eids_unique_cnt", "\n",
                "wc -l dec21_dummy_eids_unique > dec21_dummy_eids_unique_cnt", "\n",
                "wc -l dec20_core_eids_unique > dec20_core_eids_unique_cnt", "\n",
                "wc -l dec21_core_eids_unique > dec21_core_eids_unique_cnt", "\n",
                "wc -l dec20_dummy_ts_unique > dec20_dummy_ts_unique_cnt", "\n",
                "wc -l dec21_dummy_ts_unique > dec21_dummy_ts_unique_cnt", "\n",
                "wc -l dec20_core_ts_unique > dec20_core_ts_unique_cnt", "\n",
                "wc -l dec21_core_ts_unique > dec21_core_ts_unique_cnt", "\n",                
                "wc -l dec20_dummy_cbc_unique > dec20_dummy_cbc_unique_cnt", "\n",
                "wc -l dec21_dummy_cbc_unique > dec21_dummy_cbc_unique_cnt", "\n",
                "wc -l dec20_core_cbc_unique > dec20_core_cbc_unique_cnt", "\n",
                "wc -l dec21_core_cbc_unique > dec21_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}