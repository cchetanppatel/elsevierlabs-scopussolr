{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o nov21_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-21%2Fdummy_eid_timestamp_cb_Nov21.csv.gz?Expires=1387655440&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=YfYPqQwNojSkTj5KtCO%2BKZvGj%2FA%3D'", "\n",
                "curl -o nov21_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-21%2Fcore_eid_timestamp_cb_Nov21.csv.gz?Expires=1387655419&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=L1F30lIOUnkhuJlKXe4q6DPAjXM%3D'", "\n",
                "gunzip nov21_dummy.gz", "\n",
                "gunzip nov21_core.gz", "\n",
                "wc -l nov21_dummy > nov21_dummy_cnt", "\n",
                "wc -l nov21_core > nov21_core_cnt", "\n",
                "cut -d , -f1 nov21_dummy > nov21_dummy_eids", "\n",
                "cut -d , -f1 nov21_core > nov21_core_eids", "\n",
                "cut -d , -f1,3 nov21_dummy > nov21_dummy_ts", "\n",
                "cut -d , -f1,3 nov21_core > nov21_core_ts", "\n",        
                "cut -d , -f1,4 nov21_dummy > nov21_dummy_cbc", "\n",
                "cut -d , -f1,4 nov21_core > nov21_core_cbc", "\n",  
                "curl -o nov22_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-22%2Fdummy_eid_timestamp_cb_Nov22.csv.gz?Expires=1387740721&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=M6Hv3Mb7vkHK3uAyh5MeGirdmBo%3D'", "\n",
                "curl -o nov22_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-22%2Fcore_eid_timestamp_cb_Nov22.csv.gz?Expires=1387740692&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=rHoaHKZllVi%2FJ%2FHtlKx7z4k1nXg%3D'", "\n",
                "gunzip nov22_dummy.gz", "\n",
                "gunzip nov22_core.gz", "\n",
                "wc -l nov22_dummy > nov22_dummy_cnt", "\n",
                "wc -l nov22_core > nov22_core_cnt", "\n",
                "cut -d , -f1 nov22_dummy > nov22_dummy_eids", "\n",
                "cut -d , -f1 nov22_core > nov22_core_eids", "\n",
                "cut -d , -f1,3 nov22_dummy > nov22_dummy_ts", "\n",
                "cut -d , -f1,3 nov22_core > nov22_core_ts", "\n",        
                "cut -d , -f1,4 nov22_dummy > nov22_dummy_cbc", "\n",
                "cut -d , -f1,4 nov22_core > nov22_core_cbc", "\n",                  
                "comm -2 -3 nov21_dummy_eids nov22_dummy_eids > nov21_dummy_eids_unique", "\n",
                "comm -1 -3 nov21_dummy_eids nov22_dummy_eids > nov22_dummy_eids_unique", "\n",                
                "comm -2 -3 nov21_core_eids nov22_core_eids > nov21_core_eids_unique", "\n",
                "comm -1 -3 nov21_core_eids nov22_core_eids > nov22_core_eids_unique", "\n",   
                "comm -2 -3 nov21_dummy_ts nov22_dummy_ts > nov21_dummy_ts_unique", "\n",
                "comm -1 -3 nov21_dummy_ts nov22_dummy_ts > nov22_dummy_ts_unique", "\n",                
                "comm -2 -3 nov21_core_ts nov22_core_ts > nov21_core_ts_unique", "\n",
                "comm -1 -3 nov21_core_ts nov22_core_ts > nov22_core_ts_unique", "\n", 
                "comm -2 -3 nov21_dummy_cbc nov22_dummy_cbc > nov21_dummy_cbc_unique", "\n",
                "comm -1 -3 nov21_dummy_cbc nov22_dummy_cbc > nov22_dummy_cbc_unique", "\n",                
                "comm -2 -3 nov21_core_cbc nov22_core_cbc > nov21_core_cbc_unique", "\n",
                "comm -1 -3 nov21_core_cbc nov22_core_cbc > nov22_core_cbc_unique", "\n",
                "wc -l nov21_dummy_eids_unique > nov21_dummy_eids_unique_cnt", "\n",
                "wc -l nov22_dummy_eids_unique > nov22_dummy_eids_unique_cnt", "\n",
                "wc -l nov21_core_eids_unique > nov21_core_eids_unique_cnt", "\n",
                "wc -l nov22_core_eids_unique > nov22_core_eids_unique_cnt", "\n",
                "wc -l nov21_dummy_ts_unique > nov21_dummy_ts_unique_cnt", "\n",
                "wc -l nov22_dummy_ts_unique > nov22_dummy_ts_unique_cnt", "\n",
                "wc -l nov21_core_ts_unique > nov21_core_ts_unique_cnt", "\n",
                "wc -l nov22_core_ts_unique > nov22_core_ts_unique_cnt", "\n",                
                "wc -l nov21_dummy_cbc_unique > nov21_dummy_cbc_unique_cnt", "\n",
                "wc -l nov22_dummy_cbc_unique > nov22_dummy_cbc_unique_cnt", "\n",
                "wc -l nov21_core_cbc_unique > nov21_core_cbc_unique_cnt", "\n",
                "wc -l nov22_core_cbc_unique > nov22_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}