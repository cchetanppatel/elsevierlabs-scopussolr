{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o nov13_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-13%2Fdummy_eid_timestamp_cb_Nov13.csv.gz?Expires=1386963226&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=uJCwj3aZJJHZJ2d5Qq9Wx43OBZ0%3D'", "\n",
                "curl -o nov13_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-13%2Fcore_eid_timestamp_cb_Nov13.csv.gz?Expires=1386962697&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=VVr6tmTmgg6Djcq0kw4JJKw7DhY%3D'", "\n",
                "gunzip nov13_dummy.gz", "\n",
                "gunzip nov13_core.gz", "\n",
                "wc -l nov13_dummy > nov13_dummy_cnt", "\n",
                "wc -l nov13_core > nov13_core_cnt", "\n",
                "cut -d , -f1 nov13_dummy > nov13_dummy_eids", "\n",
                "cut -d , -f1 nov13_core > nov13_core_eids", "\n",
                "cut -d , -f1,3 nov13_dummy > nov13_dummy_ts", "\n",
                "cut -d , -f1,3 nov13_core > nov13_core_ts", "\n",        
                "cut -d , -f1,4 nov13_dummy > nov13_dummy_cbc", "\n",
                "cut -d , -f1,4 nov13_core > nov13_core_cbc", "\n",  
                "curl -o nov14_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-14%2Fdummy_eid_timestamp_cb_Nov14.csv.gz?Expires=1387051658&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=KaxrP90LW%2B7ixggm6UjR1N9WUbg%3D'", "\n",
                "curl -o nov14_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-14%2Fcore_eid_timestamp_cb_Nov14.csv.gz?Expires=1387049697&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=ZiWXyFIB97rL8c7tx0YiwLukNVU%3D'", "\n",
                "gunzip nov14_dummy.gz", "\n",
                "gunzip nov14_core.gz", "\n",
                "wc -l nov14_dummy > nov14_dummy_cnt", "\n",
                "wc -l nov14_core > nov14_core_cnt", "\n",
                "cut -d , -f1 nov14_dummy > nov14_dummy_eids", "\n",
                "cut -d , -f1 nov14_core > nov14_core_eids", "\n",
                "cut -d , -f1,3 nov14_dummy > nov14_dummy_ts", "\n",
                "cut -d , -f1,3 nov14_core > nov14_core_ts", "\n",        
                "cut -d , -f1,4 nov14_dummy > nov14_dummy_cbc", "\n",
                "cut -d , -f1,4 nov14_core > nov14_core_cbc", "\n",                  
                "comm -2 -3 nov13_dummy_eids nov14_dummy_eids > nov13_dummy_eids_unique", "\n",
                "comm -1 -3 nov13_dummy_eids nov14_dummy_eids > nov14_dummy_eids_unique", "\n",                
                "comm -2 -3 nov13_core_eids nov14_core_eids > nov13_core_eids_unique", "\n",
                "comm -1 -3 nov13_core_eids nov14_core_eids > nov14_core_eids_unique", "\n",   
                "comm -2 -3 nov13_dummy_ts nov14_dummy_ts > nov13_dummy_ts_unique", "\n",
                "comm -1 -3 nov13_dummy_ts nov14_dummy_ts > nov14_dummy_ts_unique", "\n",                
                "comm -2 -3 nov13_core_ts nov14_core_ts > nov13_core_ts_unique", "\n",
                "comm -1 -3 nov13_core_ts nov14_core_ts > nov14_core_ts_unique", "\n", 
                "comm -2 -3 nov13_dummy_cbc nov14_dummy_cbc > nov13_dummy_cbc_unique", "\n",
                "comm -1 -3 nov13_dummy_cbc nov14_dummy_cbc > nov14_dummy_cbc_unique", "\n",                
                "comm -2 -3 nov13_core_cbc nov14_core_cbc > nov13_core_cbc_unique", "\n",
                "comm -1 -3 nov13_core_cbc nov14_core_cbc > nov14_core_cbc_unique", "\n",
                "wc -l nov13_dummy_eids_unique > nov13_dummy_eids_unique_cnt", "\n",
                "wc -l nov14_dummy_eids_unique > nov14_dummy_eids_unique_cnt", "\n",
                "wc -l nov13_core_eids_unique > nov13_core_eids_unique_cnt", "\n",
                "wc -l nov14_core_eids_unique > nov14_core_eids_unique_cnt", "\n",
                "wc -l nov13_dummy_ts_unique > nov13_dummy_ts_unique_cnt", "\n",
                "wc -l nov14_dummy_ts_unique > nov14_dummy_ts_unique_cnt", "\n",
                "wc -l nov13_core_ts_unique > nov13_core_ts_unique_cnt", "\n",
                "wc -l nov14_core_ts_unique > nov14_core_ts_unique_cnt", "\n",                
                "wc -l nov13_dummy_cbc_unique > nov13_dummy_cbc_unique_cnt", "\n",
                "wc -l nov14_dummy_cbc_unique > nov14_dummy_cbc_unique_cnt", "\n",
                "wc -l nov13_core_cbc_unique > nov13_core_cbc_unique_cnt", "\n",
                "wc -l nov14_core_cbc_unique > nov14_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}