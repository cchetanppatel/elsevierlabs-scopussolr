{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec30_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-30%2Fdummy_eid_timestamp_cb_Dec30.csv.gz?Expires=1396802675&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=ZWw%2BmwpnSo7jz7h1sx4sqASZ6BA%3D'", "\n",
                "curl -o dec30_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-30%2Fcore_eid_timestamp_cb_Dec30.csv.gz?Expires=1396802676&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=LBryHJv0FPqLlzYQ4C9Gh4Vynww%3D'", "\n",
                "gunzip dec30_dummy.gz", "\n",
                "gunzip dec30_core.gz", "\n",
                "wc -l dec30_dummy > dec30_dummy_cnt", "\n",
                "wc -l dec30_core > dec30_core_cnt", "\n",
                "cut -d , -f1 dec30_dummy > dec30_dummy_eids", "\n",
                "cut -d , -f1 dec30_core > dec30_core_eids", "\n",
                "cut -d , -f1,3 dec30_dummy > dec30_dummy_ts", "\n",
                "cut -d , -f1,3 dec30_core > dec30_core_ts", "\n",        
                "cut -d , -f1,4 dec30_dummy > dec30_dummy_cbc", "\n",
                "cut -d , -f1,4 dec30_core > dec30_core_cbc", "\n",  
                "curl -o dec31_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-31%2Fdummy_eid_timestamp_cb_Dec31.csv.gz?Expires=1396804558&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=xfX3BjEas9qmyYQNT4sblzSjGJs%3D'", "\n",
                "curl -o dec31_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-31%2Fcore_eid_timestamp_cb_Dec31.csv.gz?Expires=1396804558&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=iWvmim42eBV3H%2FurXpIY%2B6sF9rU%3D'", "\n",
                "gunzip dec31_dummy.gz", "\n",
                "gunzip dec31_core.gz", "\n",
                "wc -l dec31_dummy > dec31_dummy_cnt", "\n",
                "wc -l dec31_core > dec31_core_cnt", "\n",
                "cut -d , -f1 dec31_dummy > dec31_dummy_eids", "\n",
                "cut -d , -f1 dec31_core > dec31_core_eids", "\n",
                "cut -d , -f1,3 dec31_dummy > dec31_dummy_ts", "\n",
                "cut -d , -f1,3 dec31_core > dec31_core_ts", "\n",        
                "cut -d , -f1,4 dec31_dummy > dec31_dummy_cbc", "\n",
                "cut -d , -f1,4 dec31_core > dec31_core_cbc", "\n",                  
                "comm -2 -3 dec30_dummy_eids dec31_dummy_eids > dec30_dummy_eids_unique", "\n",
                "comm -1 -3 dec30_dummy_eids dec31_dummy_eids > dec31_dummy_eids_unique", "\n",                
                "comm -2 -3 dec30_core_eids dec31_core_eids > dec30_core_eids_unique", "\n",
                "comm -1 -3 dec30_core_eids dec31_core_eids > dec31_core_eids_unique", "\n",   
                "comm -2 -3 dec30_dummy_ts dec31_dummy_ts > dec30_dummy_ts_unique", "\n",
                "comm -1 -3 dec30_dummy_ts dec31_dummy_ts > dec31_dummy_ts_unique", "\n",                
                "comm -2 -3 dec30_core_ts dec31_core_ts > dec30_core_ts_unique", "\n",
                "comm -1 -3 dec30_core_ts dec31_core_ts > dec31_core_ts_unique", "\n", 
                "comm -2 -3 dec30_dummy_cbc dec31_dummy_cbc > dec30_dummy_cbc_unique", "\n",
                "comm -1 -3 dec30_dummy_cbc dec31_dummy_cbc > dec31_dummy_cbc_unique", "\n",                
                "comm -2 -3 dec30_core_cbc dec31_core_cbc > dec30_core_cbc_unique", "\n",
                "comm -1 -3 dec30_core_cbc dec31_core_cbc > dec31_core_cbc_unique", "\n",
                "wc -l dec30_dummy_eids_unique > dec30_dummy_eids_unique_cnt", "\n",
                "wc -l dec31_dummy_eids_unique > dec31_dummy_eids_unique_cnt", "\n",
                "wc -l dec30_core_eids_unique > dec30_core_eids_unique_cnt", "\n",
                "wc -l dec31_core_eids_unique > dec31_core_eids_unique_cnt", "\n",
                "wc -l dec30_dummy_ts_unique > dec30_dummy_ts_unique_cnt", "\n",
                "wc -l dec31_dummy_ts_unique > dec31_dummy_ts_unique_cnt", "\n",
                "wc -l dec30_core_ts_unique > dec30_core_ts_unique_cnt", "\n",
                "wc -l dec31_core_ts_unique > dec31_core_ts_unique_cnt", "\n",                
                "wc -l dec30_dummy_cbc_unique > dec30_dummy_cbc_unique_cnt", "\n",
                "wc -l dec31_dummy_cbc_unique > dec31_dummy_cbc_unique_cnt", "\n",
                "wc -l dec30_core_cbc_unique > dec30_core_cbc_unique_cnt", "\n",
                "wc -l dec31_core_cbc_unique > dec31_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}