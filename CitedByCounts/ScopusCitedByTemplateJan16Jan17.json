{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare cited-by counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan16_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-16%2Fdummy_eid_timestamp_cb_Jan16.csv.gz?Expires=1397740377&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=CL8Z3hv1%2FY6jqsB6rt2%2FdkVMDTc%3D'", "\n",
                "curl -o jan16_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-16%2Fcore_eid_timestamp_cb_Jan16.csv.gz?Expires=1397740377&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=4n%2BkgZWhxHCNplm8IjrEsTHpED8%3D'", "\n",
                "gunzip jan16_dummy.gz", "\n",
                "gunzip jan16_core.gz", "\n",
                "wc -l jan16_dummy > jan16_dummy_cnt", "\n",
                "wc -l jan16_core > jan16_core_cnt", "\n",
                "cut -d , -f1 jan16_dummy > jan16_dummy_eids", "\n",
                "cut -d , -f1 jan16_core > jan16_core_eids", "\n",
                "cut -d , -f1,3 jan16_dummy > jan16_dummy_ts", "\n",
                "cut -d , -f1,3 jan16_core > jan16_core_ts", "\n",        
                "cut -d , -f1,4 jan16_dummy > jan16_dummy_cbc", "\n",
                "cut -d , -f1,4 jan16_core > jan16_core_cbc", "\n",  
                "curl -o jan17_dummy.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-17%2Fdummy_eid_timestamp_cb_Jan17.csv.gz?Expires=1398081815&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=%2BjBpDZyhv7Yj5sqVS1e%2BJ%2BTqqu0%3D'", "\n",
                "curl -o jan17_core.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-17%2Fcore_eid_timestamp_cb_Jan17.csv.gz?Expires=1398081815&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=KOOe1O7FJLep%2BbnzVqgRmEO74Zg%3D'", "\n",
                "gunzip jan17_dummy.gz", "\n",
                "gunzip jan17_core.gz", "\n",
                "wc -l jan17_dummy > jan17_dummy_cnt", "\n",
                "wc -l jan17_core > jan17_core_cnt", "\n",
                "cut -d , -f1 jan17_dummy > jan17_dummy_eids", "\n",
                "cut -d , -f1 jan17_core > jan17_core_eids", "\n",
                "cut -d , -f1,3 jan17_dummy > jan17_dummy_ts", "\n",
                "cut -d , -f1,3 jan17_core > jan17_core_ts", "\n",        
                "cut -d , -f1,4 jan17_dummy > jan17_dummy_cbc", "\n",
                "cut -d , -f1,4 jan17_core > jan17_core_cbc", "\n",                  
                "comm -2 -3 jan16_dummy_eids jan17_dummy_eids > jan16_dummy_eids_unique", "\n",
                "comm -1 -3 jan16_dummy_eids jan17_dummy_eids > jan17_dummy_eids_unique", "\n",                
                "comm -2 -3 jan16_core_eids jan17_core_eids > jan16_core_eids_unique", "\n",
                "comm -1 -3 jan16_core_eids jan17_core_eids > jan17_core_eids_unique", "\n",   
                "comm -2 -3 jan16_dummy_ts jan17_dummy_ts > jan16_dummy_ts_unique", "\n",
                "comm -1 -3 jan16_dummy_ts jan17_dummy_ts > jan17_dummy_ts_unique", "\n",                
                "comm -2 -3 jan16_core_ts jan17_core_ts > jan16_core_ts_unique", "\n",
                "comm -1 -3 jan16_core_ts jan17_core_ts > jan17_core_ts_unique", "\n", 
                "comm -2 -3 jan16_dummy_cbc jan17_dummy_cbc > jan16_dummy_cbc_unique", "\n",
                "comm -1 -3 jan16_dummy_cbc jan17_dummy_cbc > jan17_dummy_cbc_unique", "\n",                
                "comm -2 -3 jan16_core_cbc jan17_core_cbc > jan16_core_cbc_unique", "\n",
                "comm -1 -3 jan16_core_cbc jan17_core_cbc > jan17_core_cbc_unique", "\n",
                "wc -l jan16_dummy_eids_unique > jan16_dummy_eids_unique_cnt", "\n",
                "wc -l jan17_dummy_eids_unique > jan17_dummy_eids_unique_cnt", "\n",
                "wc -l jan16_core_eids_unique > jan16_core_eids_unique_cnt", "\n",
                "wc -l jan17_core_eids_unique > jan17_core_eids_unique_cnt", "\n",
                "wc -l jan16_dummy_ts_unique > jan16_dummy_ts_unique_cnt", "\n",
                "wc -l jan17_dummy_ts_unique > jan17_dummy_ts_unique_cnt", "\n",
                "wc -l jan16_core_ts_unique > jan16_core_ts_unique_cnt", "\n",
                "wc -l jan17_core_ts_unique > jan17_core_ts_unique_cnt", "\n",                
                "wc -l jan16_dummy_cbc_unique > jan16_dummy_cbc_unique_cnt", "\n",
                "wc -l jan17_dummy_cbc_unique > jan17_dummy_cbc_unique_cnt", "\n",
                "wc -l jan16_core_cbc_unique > jan16_core_cbc_unique_cnt", "\n",
                "wc -l jan17_core_cbc_unique > jan17_core_cbc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}