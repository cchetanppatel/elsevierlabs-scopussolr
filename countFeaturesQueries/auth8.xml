<?xml version="1.0" encoding="UTF-8"?>
<ns2:search xmlns:ns2="http://webservices.elsevier.com/schemas/search/fast/types/v4"
    xmlns:ns3="http://webservices.elsevier.com/schemas/easi/headers/types/v1">
    <!-- 
        Query ID - AUTH8
        Query -    AUTH-LAST-NAME(smith) AND AUTH-FIRST(j*) and LIMIT-TO(AFFILCITY, "Philadelphia") AND (LIMIT-TO(AFFILCOUNTRY, "United States") AND (LIMIT-TO(AUTH-SUBCLUS, "ENGI") OR LIMIT-TO(AUTH-SUBCLUS, "MEDI") OR LIMIT-TO(AUTH-SUBCLUS, "BIOC") AND (LIMIT-TO(SRCTITLE, "Journal of the American Medical Association") AND (LIMIT-TO(AF-ID, "GlaxoSmithKline, USA" 60097308)
        Description - Facets in search: Author search containing multiple Facets on auth/affil cluster (simulated)
    -->
    <ns2:searchReqPayload>
        <ns2:xQueryX>
            <ft:fullTextQuery xmlns:ft="http://www.elsevier.com/2003/01/xqueryxFT-schema"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://www.elsevier.com/2003/01/xqueryxFT-schema eql.xsd">
                <ft:query>
                    <ft:andQuery>
                        <ft:word path="authlast">Smith</ft:word>
                        <ft:word path="authfirst">J*</ft:word>
                        <ft:word path="affilcity">Philadelphia</ft:word>
                        <ft:word path="affilctry" phrase="true">United States</ft:word>
                        <ft:word path="srctitle" phrase="true">Journal of the American Medical Association</ft:word>
                        <ft:word path="afid">60097308</ft:word>
                        <ft:orQuery>
                            <ft:word path="subjclus">ENGI</ft:word>
                            <ft:word path="subjclus">MEDI</ft:word>
                            <ft:word path="subjclus">BIOC</ft:word>
                        </ft:orQuery>
                    </ft:andQuery>
                </ft:query>
            </ft:fullTextQuery>
        </ns2:xQueryX>
        <ns2:orderByList>
            <ns2:orderByAttributes path="authid" sortOrder="ascending"/>
        </ns2:orderByList>
        <ns2:returnAttributes maxResults="10" start="0"/>
        <ns2:elsfilter>
            <ft:fullTextQuery xmlns:ft="http://www.elsevier.com/2003/01/xqueryxFT-schema"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://www.elsevier.com/2003/01/xqueryxFT-schema eql.xsd">
                <ft:query>
                    <ft:numericCompare comparator="greaterThan">
                        <ft:clause path="count"/>
                        <ft:decimal>0</ft:decimal>
                    </ft:numericCompare>
                </ft:query>
            </ft:fullTextQuery>
        </ns2:elsfilter>
    </ns2:searchReqPayload>
</ns2:search>