        <cts:and-query xmlns:cts="http://marklogic.com/cts">
            <cts:directory-query depth="infinity">
                <cts:uri>/core/</cts:uri>
            </cts:directory-query>
            <cts:near-query distance="5">
                <cts:element-word-query>
                    <cts:element>titletext</cts:element>
                    <cts:text xml:lang="en">practice</cts:text>
                </cts:element-word-query>
                <cts:element-word-query>
                    <cts:element>titletext</cts:element>
                    <cts:text xml:lang="en">letter</cts:text>
                </cts:element-word-query>                
                <cts:option>unordered</cts:option>                
            </cts:near-query>
        </cts:and-query>
