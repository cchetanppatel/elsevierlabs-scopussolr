{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan06_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-06%2FAP_eid_timestamp_cnt_Jan06.csv.gz?Expires=1396814285&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=hp1oNDCEURhSYS1lXVboykBF55w%3D'", "\n",
                "curl -o jan06_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-06%2FIP_eid_timestamp_cnt_Jan06.csv.gz?Expires=1396814285&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=7uEu9ORY6FKuNeY6BpYaAUVKllU%3D'", "\n",
                "gunzip jan06_author.gz", "\n",
                "gunzip jan06_affiliation.gz", "\n",
                "sort jan06_author -o jan06_author", "\n",
                "sort jan06_affiliation -o jan06_affiliation", "\n",
                "wc -l jan06_author > jan06_author_cnt", "\n",
                "wc -l jan06_affiliation > jan06_affiliation_cnt", "\n",
                "cut -d , -f1 jan06_author > jan06_author_eids", "\n",
                "cut -d , -f1 jan06_affiliation > jan06_affiliation_eids", "\n",
                "cut -d , -f1,2 jan06_author > jan06_author_ts", "\n",
                "cut -d , -f1,2 jan06_affiliation > jan06_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan06_author > jan06_author_pc", "\n",
                "cut -d , -f1,3 jan06_affiliation > jan06_affiliation_pc", "\n",  
                "curl -o jan07_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-07%2FAP_eid_timestamp_cnt_Jan07.csv.gz?Expires=1396896943&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=AHgDUhDkRfnM8jmUHkcGi%2FoTmvE%3D'", "\n",
                "curl -o jan07_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-07%2FIP_eid_timestamp_cnt_Jan07.csv.gz?Expires=1396896943&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=DvHSb%2BcdDi3RjyarKE7B85qwMMY%3D'", "\n",
                "gunzip jan07_author.gz", "\n",
                "gunzip jan07_affiliation.gz", "\n",
                "sort jan07_author -o jan07_author", "\n",
                "sort jan07_affiliation -o jan07_affiliation", "\n",
                "wc -l jan07_author > jan07_author_cnt", "\n",
                "wc -l jan07_affiliation > jan07_affiliation_cnt", "\n",              
                "cut -d , -f1 jan07_author > jan07_author_eids", "\n",
                "cut -d , -f1 jan07_affiliation > jan07_affiliation_eids", "\n",
                "cut -d , -f1,2 jan07_author > jan07_author_ts", "\n",
                "cut -d , -f1,2 jan07_affiliation > jan07_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan07_author > jan07_author_pc", "\n",
                "cut -d , -f1,3 jan07_affiliation > jan07_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan06_author_eids jan07_author_eids > jan06_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan06_author_eids jan07_author_eids > jan07_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan06_affiliation_eids jan07_affiliation_eids > jan06_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan06_affiliation_eids jan07_affiliation_eids > jan07_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan06_author_ts jan07_author_ts > jan06_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan06_author_ts jan07_author_ts > jan07_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan06_affiliation_ts jan07_affiliation_ts > jan06_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan06_affiliation_ts jan07_affiliation_ts > jan07_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan06_author_pc jan07_author_pc > jan06_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan06_author_pc jan07_author_pc > jan07_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan06_affiliation_pc jan07_affiliation_pc > jan06_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan06_affiliation_pc jan07_affiliation_pc > jan07_affiliation_pc_unique", "\n",
                "wc -l jan06_author_eids_unique > jan06_author_eids_unique_cnt", "\n",
                "wc -l jan07_author_eids_unique > jan07_author_eids_unique_cnt", "\n",
                "wc -l jan06_affiliation_eids_unique > jan06_affiliation_eids_unique_cnt", "\n",
                "wc -l jan07_affiliation_eids_unique > jan07_affiliation_eids_unique_cnt", "\n",
                "wc -l jan06_author_ts_unique > jan06_author_ts_unique_cnt", "\n",
                "wc -l jan07_author_ts_unique > jan07_author_ts_unique_cnt", "\n",
                "wc -l jan06_affiliation_ts_unique > jan06_affiliation_ts_unique_cnt", "\n",
                "wc -l jan07_affiliation_ts_unique > jan07_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan06_author_pc_unique > jan06_author_pc_unique_cnt", "\n",
                "wc -l jan07_author_pc_unique > jan07_author_pc_unique_cnt", "\n",
                "wc -l jan06_affiliation_pc_unique > jan06_affiliation_pc_unique_cnt", "\n",
                "wc -l jan07_affiliation_pc_unique > jan07_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}