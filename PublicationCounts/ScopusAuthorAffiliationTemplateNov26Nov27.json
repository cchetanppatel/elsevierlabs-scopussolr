{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o nov26_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-26%2FAP_eid_timestamp_cnt_Nov26.csv.gz?Expires=1388596043&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=VFNlF6fQSF%2BpBtaPAwL6Alis%2FAU%3D'", "\n",
                "curl -o nov26_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-26%2FIP_eid_timestamp_cnt_Nov26.csv.gz?Expires=1388596122&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=JAFPx973UXNVRwGLRJX5xdWgVeM%3D'", "\n",
                "gunzip nov26_author.gz", "\n",
                "gunzip nov26_affiliation.gz", "\n",
                "sort -d -o nov26_author nov26_author", "\n",
                "sort -d -o nov26_affiliation nov26_affiliation ", "\n",
                "wc -l nov26_author > nov26_author_cnt", "\n",
                "wc -l nov26_affiliation > nov26_affiliation_cnt", "\n",
                "cut -d , -f1 nov26_author > nov26_author_eids", "\n",
                "cut -d , -f1 nov26_affiliation > nov26_affiliation_eids", "\n",
                "cut -d , -f1,2 nov26_author > nov26_author_ts", "\n",
                "cut -d , -f1,2 nov26_affiliation > nov26_affiliation_ts", "\n",        
                "cut -d , -f1,3 nov26_author > nov26_author_pc", "\n",
                "cut -d , -f1,3 nov26_affiliation > nov26_affiliation_pc", "\n",  
                "curl -o nov27_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-27%2FAP_eid_timestamp_cnt_Nov27.csv.gz?Expires=1388596523&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Bido%2F0teJNckuDhL5EqT46Xav%2BY%3D'", "\n",
                "curl -o nov27_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-27%2FIP_eid_timestamp_cnt_Nov27.csv.gz?Expires=1388596495&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=%2FPwvm7Bj2pQhrE2dR9ADsu2X8SM%3D'", "\n",
                "gunzip nov27_author.gz", "\n",
                "gunzip nov27_affiliation.gz", "\n",
                "sort -d -o nov27_author nov27_author", "\n",
                "sort -d -o nov27_affiliation nov27_affiliation", "\n",
                "wc -l nov27_author > nov27_author_cnt", "\n",
                "wc -l nov27_affiliation > nov27_affiliation_cnt", "\n",              
                "cut -d , -f1 nov27_author > nov27_author_eids", "\n",
                "cut -d , -f1 nov27_affiliation > nov27_affiliation_eids", "\n",
                "cut -d , -f1,2 nov27_author > nov27_author_ts", "\n",
                "cut -d , -f1,2 nov27_affiliation > nov27_affiliation_ts", "\n",        
                "cut -d , -f1,3 nov27_author > nov27_author_pc", "\n",
                "cut -d , -f1,3 nov27_affiliation > nov27_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order nov26_author_eids nov27_author_eids > nov26_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order nov26_author_eids nov27_author_eids > nov27_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order nov26_affiliation_eids nov27_affiliation_eids > nov26_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order nov26_affiliation_eids nov27_affiliation_eids > nov27_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order nov26_author_ts nov27_author_ts > nov26_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order nov26_author_ts nov27_author_ts > nov27_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order nov26_affiliation_ts nov27_affiliation_ts > nov26_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order nov26_affiliation_ts nov27_affiliation_ts > nov27_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order nov26_author_pc nov27_author_pc > nov26_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order nov26_author_pc nov27_author_pc > nov27_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order nov26_affiliation_pc nov27_affiliation_pc > nov26_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order nov26_affiliation_pc nov27_affiliation_pc > nov27_affiliation_pc_unique", "\n",
                "wc -l nov26_author_eids_unique > nov26_author_eids_unique_cnt", "\n",
                "wc -l nov27_author_eids_unique > nov27_author_eids_unique_cnt", "\n",
                "wc -l nov26_affiliation_eids_unique > nov26_affiliation_eids_unique_cnt", "\n",
                "wc -l nov27_affiliation_eids_unique > nov27_affiliation_eids_unique_cnt", "\n",
                "wc -l nov26_author_ts_unique > nov26_author_ts_unique_cnt", "\n",
                "wc -l nov27_author_ts_unique > nov27_author_ts_unique_cnt", "\n",
                "wc -l nov26_affiliation_ts_unique > nov26_affiliation_ts_unique_cnt", "\n",
                "wc -l nov27_affiliation_ts_unique > nov27_affiliation_ts_unique_cnt", "\n",                
                "wc -l nov26_author_pc_unique > nov26_author_pc_unique_cnt", "\n",
                "wc -l nov27_author_pc_unique > nov27_author_pc_unique_cnt", "\n",
                "wc -l nov26_affiliation_pc_unique > nov26_affiliation_pc_unique_cnt", "\n",
                "wc -l nov27_affiliation_pc_unique > nov27_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}