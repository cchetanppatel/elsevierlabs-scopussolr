{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan04_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-04%2FAP_eid_timestamp_cnt_Jan04.csv.gz?Expires=1396812361&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Jn7zXt%2FmRuXI%2F3Xzcn1ed4sDko0%3D'", "\n",
                "curl -o jan04_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-04%2FIP_eid_timestamp_cnt_Jan04.csv.gz?Expires=1396812361&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=61Cf7HxeiSewLOt04xTYjEAzeAQ%3D'", "\n",
                "gunzip jan04_author.gz", "\n",
                "gunzip jan04_affiliation.gz", "\n",
                "sort jan04_author -o jan04_author", "\n",
                "sort jan04_affiliation -o jan04_affiliation", "\n",
                "wc -l jan04_author > jan04_author_cnt", "\n",
                "wc -l jan04_affiliation > jan04_affiliation_cnt", "\n",
                "cut -d , -f1 jan04_author > jan04_author_eids", "\n",
                "cut -d , -f1 jan04_affiliation > jan04_affiliation_eids", "\n",
                "cut -d , -f1,2 jan04_author > jan04_author_ts", "\n",
                "cut -d , -f1,2 jan04_affiliation > jan04_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan04_author > jan04_author_pc", "\n",
                "cut -d , -f1,3 jan04_affiliation > jan04_affiliation_pc", "\n",  
                "curl -o jan05_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-05%2FAP_eid_timestamp_cnt_Jan05.csv.gz?Expires=1396813838&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=%2B0pWs93vCAccpyINm%2BuWn69kDHI%3D'", "\n",
                "curl -o jan05_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-05%2FIP_eid_timestamp_cnt_Jan05.csv.gz?Expires=1396813838&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=zwfgl9Peu3JzP5YFi4CHtEM5Zyg%3D'", "\n",
                "gunzip jan05_author.gz", "\n",
                "gunzip jan05_affiliation.gz", "\n",
                "sort jan05_author -o jan05_author", "\n",
                "sort jan05_affiliation -o jan05_affiliation", "\n",
                "wc -l jan05_author > jan05_author_cnt", "\n",
                "wc -l jan05_affiliation > jan05_affiliation_cnt", "\n",              
                "cut -d , -f1 jan05_author > jan05_author_eids", "\n",
                "cut -d , -f1 jan05_affiliation > jan05_affiliation_eids", "\n",
                "cut -d , -f1,2 jan05_author > jan05_author_ts", "\n",
                "cut -d , -f1,2 jan05_affiliation > jan05_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan05_author > jan05_author_pc", "\n",
                "cut -d , -f1,3 jan05_affiliation > jan05_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan04_author_eids jan05_author_eids > jan04_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan04_author_eids jan05_author_eids > jan05_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan04_affiliation_eids jan05_affiliation_eids > jan04_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan04_affiliation_eids jan05_affiliation_eids > jan05_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan04_author_ts jan05_author_ts > jan04_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan04_author_ts jan05_author_ts > jan05_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan04_affiliation_ts jan05_affiliation_ts > jan04_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan04_affiliation_ts jan05_affiliation_ts > jan05_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan04_author_pc jan05_author_pc > jan04_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan04_author_pc jan05_author_pc > jan05_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan04_affiliation_pc jan05_affiliation_pc > jan04_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan04_affiliation_pc jan05_affiliation_pc > jan05_affiliation_pc_unique", "\n",
                "wc -l jan04_author_eids_unique > jan04_author_eids_unique_cnt", "\n",
                "wc -l jan05_author_eids_unique > jan05_author_eids_unique_cnt", "\n",
                "wc -l jan04_affiliation_eids_unique > jan04_affiliation_eids_unique_cnt", "\n",
                "wc -l jan05_affiliation_eids_unique > jan05_affiliation_eids_unique_cnt", "\n",
                "wc -l jan04_author_ts_unique > jan04_author_ts_unique_cnt", "\n",
                "wc -l jan05_author_ts_unique > jan05_author_ts_unique_cnt", "\n",
                "wc -l jan04_affiliation_ts_unique > jan04_affiliation_ts_unique_cnt", "\n",
                "wc -l jan05_affiliation_ts_unique > jan05_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan04_author_pc_unique > jan04_author_pc_unique_cnt", "\n",
                "wc -l jan05_author_pc_unique > jan05_author_pc_unique_cnt", "\n",
                "wc -l jan04_affiliation_pc_unique > jan04_affiliation_pc_unique_cnt", "\n",
                "wc -l jan05_affiliation_pc_unique > jan05_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}