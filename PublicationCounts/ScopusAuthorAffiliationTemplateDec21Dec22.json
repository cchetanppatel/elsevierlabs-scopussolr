{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec21_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-21%2FAP_eid_timestamp_cnt_Dec21.csv.gz?Expires=1396791567&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=t0JRMWyEaq9hM%2Bg5kFYnFMCS174%3D'", "\n",
                "curl -o dec21_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-21%2FIP_eid_timestamp_cnt_Dec21.csv.gz?Expires=1396791567&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=ryaUem3h6oy%2F0iDNEGEnre3fcqE%3D'", "\n",
                "gunzip dec21_author.gz", "\n",
                "gunzip dec21_affiliation.gz", "\n",
                "sort dec21_author -o dec21_author", "\n",
                "sort dec21_affiliation -o dec21_affiliation", "\n",
                "wc -l dec21_author > dec21_author_cnt", "\n",
                "wc -l dec21_affiliation > dec21_affiliation_cnt", "\n",
                "cut -d , -f1 dec21_author > dec21_author_eids", "\n",
                "cut -d , -f1 dec21_affiliation > dec21_affiliation_eids", "\n",
                "cut -d , -f1,2 dec21_author > dec21_author_ts", "\n",
                "cut -d , -f1,2 dec21_affiliation > dec21_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec21_author > dec21_author_pc", "\n",
                "cut -d , -f1,3 dec21_affiliation > dec21_affiliation_pc", "\n",  
                "curl -o dec22_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-22%2FAP_eid_timestamp_cnt_Dec22.csv.gz?Expires=1396792603&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=LxkriHBBJ9ZfnI9RR4C2E7gR%2BKs%3D'", "\n",
                "curl -o dec22_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-22%2FIP_eid_timestamp_cnt_Dec22.csv.gz?Expires=1396792603&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=yW38%2FHywQFqLPVDdb7pQ%2FuV7RGk%3D'", "\n",
                "gunzip dec22_author.gz", "\n",
                "gunzip dec22_affiliation.gz", "\n",
                "sort dec22_author -o dec22_author", "\n",
                "sort dec22_affiliation -o dec22_affiliation", "\n",
                "wc -l dec22_author > dec22_author_cnt", "\n",
                "wc -l dec22_affiliation > dec22_affiliation_cnt", "\n",              
                "cut -d , -f1 dec22_author > dec22_author_eids", "\n",
                "cut -d , -f1 dec22_affiliation > dec22_affiliation_eids", "\n",
                "cut -d , -f1,2 dec22_author > dec22_author_ts", "\n",
                "cut -d , -f1,2 dec22_affiliation > dec22_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec22_author > dec22_author_pc", "\n",
                "cut -d , -f1,3 dec22_affiliation > dec22_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec21_author_eids dec22_author_eids > dec21_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec21_author_eids dec22_author_eids > dec22_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec21_affiliation_eids dec22_affiliation_eids > dec21_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec21_affiliation_eids dec22_affiliation_eids > dec22_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec21_author_ts dec22_author_ts > dec21_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec21_author_ts dec22_author_ts > dec22_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec21_affiliation_ts dec22_affiliation_ts > dec21_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec21_affiliation_ts dec22_affiliation_ts > dec22_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec21_author_pc dec22_author_pc > dec21_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec21_author_pc dec22_author_pc > dec22_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec21_affiliation_pc dec22_affiliation_pc > dec21_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec21_affiliation_pc dec22_affiliation_pc > dec22_affiliation_pc_unique", "\n",
                "wc -l dec21_author_eids_unique > dec21_author_eids_unique_cnt", "\n",
                "wc -l dec22_author_eids_unique > dec22_author_eids_unique_cnt", "\n",
                "wc -l dec21_affiliation_eids_unique > dec21_affiliation_eids_unique_cnt", "\n",
                "wc -l dec22_affiliation_eids_unique > dec22_affiliation_eids_unique_cnt", "\n",
                "wc -l dec21_author_ts_unique > dec21_author_ts_unique_cnt", "\n",
                "wc -l dec22_author_ts_unique > dec22_author_ts_unique_cnt", "\n",
                "wc -l dec21_affiliation_ts_unique > dec21_affiliation_ts_unique_cnt", "\n",
                "wc -l dec22_affiliation_ts_unique > dec22_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec21_author_pc_unique > dec21_author_pc_unique_cnt", "\n",
                "wc -l dec22_author_pc_unique > dec22_author_pc_unique_cnt", "\n",
                "wc -l dec21_affiliation_pc_unique > dec21_affiliation_pc_unique_cnt", "\n",
                "wc -l dec22_affiliation_pc_unique > dec22_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}