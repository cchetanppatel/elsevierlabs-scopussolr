{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec03_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-03%2FAP_eid_timestamp_cnt_Dec03.csv.gz?Expires=1388692175&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=9AlHnOQkCQAhnafvxUULdl6qsu0%3D'", "\n",
                "curl -o dec03_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-03%2FIP_eid_timestamp_cnt_Dec03.csv.gz?Expires=1388692175&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Ez3SYIBlleBQyLZnjmBqCcTf%2FxE%3D'", "\n",
                "gunzip dec03_author.gz", "\n",
                "gunzip dec03_affiliation.gz", "\n",
                "sort dec03_author -o dec03_author", "\n",
                "sort dec03_affiliation -o dec03_affiliation", "\n",
                "wc -l dec03_author > dec03_author_cnt", "\n",
                "wc -l dec03_affiliation > dec03_affiliation_cnt", "\n",
                "cut -d , -f1 dec03_author > dec03_author_eids", "\n",
                "cut -d , -f1 dec03_affiliation > dec03_affiliation_eids", "\n",
                "cut -d , -f1,2 dec03_author > dec03_author_ts", "\n",
                "cut -d , -f1,2 dec03_affiliation > dec03_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec03_author > dec03_author_pc", "\n",
                "cut -d , -f1,3 dec03_affiliation > dec03_affiliation_pc", "\n",  
                "curl -o dec04_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-04%2FAP_eid_timestamp_cnt_Dec04.csv.gz?Expires=1388777552&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=c7TBuE04BFPt4riM%2BeJh97WdFJA%3D'", "\n",
                "curl -o dec04_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-04%2FIP_eid_timestamp_cnt_Dec04.csv.gz?Expires=1388777552&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Ko3WBCoKD3DrwBzaJPuJh0WHg64%3D'", "\n",
                "gunzip dec04_author.gz", "\n",
                "gunzip dec04_affiliation.gz", "\n",
                "sort dec04_author -o dec04_author", "\n",
                "sort dec04_affiliation -o dec04_affiliation", "\n",
                "wc -l dec04_author > dec04_author_cnt", "\n",
                "wc -l dec04_affiliation > dec04_affiliation_cnt", "\n",              
                "cut -d , -f1 dec04_author > dec04_author_eids", "\n",
                "cut -d , -f1 dec04_affiliation > dec04_affiliation_eids", "\n",
                "cut -d , -f1,2 dec04_author > dec04_author_ts", "\n",
                "cut -d , -f1,2 dec04_affiliation > dec04_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec04_author > dec04_author_pc", "\n",
                "cut -d , -f1,3 dec04_affiliation > dec04_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec03_author_eids dec04_author_eids > dec03_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec03_author_eids dec04_author_eids > dec04_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec03_affiliation_eids dec04_affiliation_eids > dec03_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec03_affiliation_eids dec04_affiliation_eids > dec04_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec03_author_ts dec04_author_ts > dec03_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec03_author_ts dec04_author_ts > dec04_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec03_affiliation_ts dec04_affiliation_ts > dec03_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec03_affiliation_ts dec04_affiliation_ts > dec04_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec03_author_pc dec04_author_pc > dec03_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec03_author_pc dec04_author_pc > dec04_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec03_affiliation_pc dec04_affiliation_pc > dec03_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec03_affiliation_pc dec04_affiliation_pc > dec04_affiliation_pc_unique", "\n",
                "wc -l dec03_author_eids_unique > dec03_author_eids_unique_cnt", "\n",
                "wc -l dec04_author_eids_unique > dec04_author_eids_unique_cnt", "\n",
                "wc -l dec03_affiliation_eids_unique > dec03_affiliation_eids_unique_cnt", "\n",
                "wc -l dec04_affiliation_eids_unique > dec04_affiliation_eids_unique_cnt", "\n",
                "wc -l dec03_author_ts_unique > dec03_author_ts_unique_cnt", "\n",
                "wc -l dec04_author_ts_unique > dec04_author_ts_unique_cnt", "\n",
                "wc -l dec03_affiliation_ts_unique > dec03_affiliation_ts_unique_cnt", "\n",
                "wc -l dec04_affiliation_ts_unique > dec04_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec03_author_pc_unique > dec03_author_pc_unique_cnt", "\n",
                "wc -l dec04_author_pc_unique > dec04_author_pc_unique_cnt", "\n",
                "wc -l dec03_affiliation_pc_unique > dec03_affiliation_pc_unique_cnt", "\n",
                "wc -l dec04_affiliation_pc_unique > dec04_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}