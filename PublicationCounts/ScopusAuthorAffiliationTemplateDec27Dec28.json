{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec27_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-27%2FAP_eid_timestamp_cnt_Dec27.csv.gz?Expires=1396798875&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=hLUT1c30ZNEBE%2FXlAAgahgRsO7w%3D'", "\n",
                "curl -o dec27_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-27%2FIP_eid_timestamp_cnt_Dec27.csv.gz?Expires=1396798875&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Ghl4av13hXtvNVqeIv3xl7nA9%2Bo%3D'", "\n",
                "gunzip dec27_author.gz", "\n",
                "gunzip dec27_affiliation.gz", "\n",
                "sort dec27_author -o dec27_author", "\n",
                "sort dec27_affiliation -o dec27_affiliation", "\n",
                "wc -l dec27_author > dec27_author_cnt", "\n",
                "wc -l dec27_affiliation > dec27_affiliation_cnt", "\n",
                "cut -d , -f1 dec27_author > dec27_author_eids", "\n",
                "cut -d , -f1 dec27_affiliation > dec27_affiliation_eids", "\n",
                "cut -d , -f1,2 dec27_author > dec27_author_ts", "\n",
                "cut -d , -f1,2 dec27_affiliation > dec27_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec27_author > dec27_author_pc", "\n",
                "cut -d , -f1,3 dec27_affiliation > dec27_affiliation_pc", "\n",  
                "curl -o dec28_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-28%2FAP_eid_timestamp_cnt_Dec28.csv.gz?Expires=1396800076&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=%2BKzXPOvCjbWoJoncaEH%2Fs69mZiY%3D'", "\n",
                "curl -o dec28_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-28%2FIP_eid_timestamp_cnt_Dec28.csv.gz?Expires=1396800076&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=JD%2BzGube0zD4fgfZ%2FranKjVxOrk%3D'", "\n",
                "gunzip dec28_author.gz", "\n",
                "gunzip dec28_affiliation.gz", "\n",
                "sort dec28_author -o dec28_author", "\n",
                "sort dec28_affiliation -o dec28_affiliation", "\n",
                "wc -l dec28_author > dec28_author_cnt", "\n",
                "wc -l dec28_affiliation > dec28_affiliation_cnt", "\n",              
                "cut -d , -f1 dec28_author > dec28_author_eids", "\n",
                "cut -d , -f1 dec28_affiliation > dec28_affiliation_eids", "\n",
                "cut -d , -f1,2 dec28_author > dec28_author_ts", "\n",
                "cut -d , -f1,2 dec28_affiliation > dec28_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec28_author > dec28_author_pc", "\n",
                "cut -d , -f1,3 dec28_affiliation > dec28_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec27_author_eids dec28_author_eids > dec27_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec27_author_eids dec28_author_eids > dec28_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec27_affiliation_eids dec28_affiliation_eids > dec27_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec27_affiliation_eids dec28_affiliation_eids > dec28_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec27_author_ts dec28_author_ts > dec27_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec27_author_ts dec28_author_ts > dec28_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec27_affiliation_ts dec28_affiliation_ts > dec27_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec27_affiliation_ts dec28_affiliation_ts > dec28_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec27_author_pc dec28_author_pc > dec27_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec27_author_pc dec28_author_pc > dec28_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec27_affiliation_pc dec28_affiliation_pc > dec27_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec27_affiliation_pc dec28_affiliation_pc > dec28_affiliation_pc_unique", "\n",
                "wc -l dec27_author_eids_unique > dec27_author_eids_unique_cnt", "\n",
                "wc -l dec28_author_eids_unique > dec28_author_eids_unique_cnt", "\n",
                "wc -l dec27_affiliation_eids_unique > dec27_affiliation_eids_unique_cnt", "\n",
                "wc -l dec28_affiliation_eids_unique > dec28_affiliation_eids_unique_cnt", "\n",
                "wc -l dec27_author_ts_unique > dec27_author_ts_unique_cnt", "\n",
                "wc -l dec28_author_ts_unique > dec28_author_ts_unique_cnt", "\n",
                "wc -l dec27_affiliation_ts_unique > dec27_affiliation_ts_unique_cnt", "\n",
                "wc -l dec28_affiliation_ts_unique > dec28_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec27_author_pc_unique > dec27_author_pc_unique_cnt", "\n",
                "wc -l dec28_author_pc_unique > dec28_author_pc_unique_cnt", "\n",
                "wc -l dec27_affiliation_pc_unique > dec27_affiliation_pc_unique_cnt", "\n",
                "wc -l dec28_affiliation_pc_unique > dec28_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}