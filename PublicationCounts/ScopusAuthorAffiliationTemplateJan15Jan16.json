{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan15_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-15%2FAP_eid_timestamp_cnt_Jan15.csv.gz?Expires=1397681762&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=R18KLlHdTePg6dZ%2B3XfEOP7zezU%3D'", "\n",
                "curl -o jan15_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-15%2FIP_eid_timestamp_cnt_Jan15.csv.gz?Expires=1397681762&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=FNITBmFf8yTOFIDRPYUeeDSXzkY%3D'", "\n",
                "gunzip jan15_author.gz", "\n",
                "gunzip jan15_affiliation.gz", "\n",
                "sort jan15_author -o jan15_author", "\n",
                "sort jan15_affiliation -o jan15_affiliation", "\n",
                "wc -l jan15_author > jan15_author_cnt", "\n",
                "wc -l jan15_affiliation > jan15_affiliation_cnt", "\n",
                "cut -d , -f1 jan15_author > jan15_author_eids", "\n",
                "cut -d , -f1 jan15_affiliation > jan15_affiliation_eids", "\n",
                "cut -d , -f1,2 jan15_author > jan15_author_ts", "\n",
                "cut -d , -f1,2 jan15_affiliation > jan15_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan15_author > jan15_author_pc", "\n",
                "cut -d , -f1,3 jan15_affiliation > jan15_affiliation_pc", "\n",  
                "curl -o jan16_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-16%2FAP_eid_timestamp_cnt_Jan16.csv.gz?Expires=1397740377&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=NaFWqLvXOaLkgTgUI7UTnwI0x6Q%3D'", "\n",
                "curl -o jan16_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-16%2FIP_eid_timestamp_cnt_Jan16.csv.gz?Expires=1397740377&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=qvz8TLD9Nu2QSEDcFQx2tfEdfb0%3D'", "\n",
                "gunzip jan16_author.gz", "\n",
                "gunzip jan16_affiliation.gz", "\n",
                "sort jan16_author -o jan16_author", "\n",
                "sort jan16_affiliation -o jan16_affiliation", "\n",
                "wc -l jan16_author > jan16_author_cnt", "\n",
                "wc -l jan16_affiliation > jan16_affiliation_cnt", "\n",              
                "cut -d , -f1 jan16_author > jan16_author_eids", "\n",
                "cut -d , -f1 jan16_affiliation > jan16_affiliation_eids", "\n",
                "cut -d , -f1,2 jan16_author > jan16_author_ts", "\n",
                "cut -d , -f1,2 jan16_affiliation > jan16_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan16_author > jan16_author_pc", "\n",
                "cut -d , -f1,3 jan16_affiliation > jan16_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan15_author_eids jan16_author_eids > jan15_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan15_author_eids jan16_author_eids > jan16_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan15_affiliation_eids jan16_affiliation_eids > jan15_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan15_affiliation_eids jan16_affiliation_eids > jan16_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan15_author_ts jan16_author_ts > jan15_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan15_author_ts jan16_author_ts > jan16_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan15_affiliation_ts jan16_affiliation_ts > jan15_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan15_affiliation_ts jan16_affiliation_ts > jan16_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan15_author_pc jan16_author_pc > jan15_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan15_author_pc jan16_author_pc > jan16_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan15_affiliation_pc jan16_affiliation_pc > jan15_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan15_affiliation_pc jan16_affiliation_pc > jan16_affiliation_pc_unique", "\n",
                "wc -l jan15_author_eids_unique > jan15_author_eids_unique_cnt", "\n",
                "wc -l jan16_author_eids_unique > jan16_author_eids_unique_cnt", "\n",
                "wc -l jan15_affiliation_eids_unique > jan15_affiliation_eids_unique_cnt", "\n",
                "wc -l jan16_affiliation_eids_unique > jan16_affiliation_eids_unique_cnt", "\n",
                "wc -l jan15_author_ts_unique > jan15_author_ts_unique_cnt", "\n",
                "wc -l jan16_author_ts_unique > jan16_author_ts_unique_cnt", "\n",
                "wc -l jan15_affiliation_ts_unique > jan15_affiliation_ts_unique_cnt", "\n",
                "wc -l jan16_affiliation_ts_unique > jan16_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan15_author_pc_unique > jan15_author_pc_unique_cnt", "\n",
                "wc -l jan16_author_pc_unique > jan16_author_pc_unique_cnt", "\n",
                "wc -l jan15_affiliation_pc_unique > jan15_affiliation_pc_unique_cnt", "\n",
                "wc -l jan16_affiliation_pc_unique > jan16_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}