{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec12_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-12%2FAP_eid_timestamp_cnt_Dec12.csv.gz?Expires=1389469452&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=n%2BEFSOORuvwWlshw3UIL%2FbF7LwM%3D'", "\n",
                "curl -o dec12_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-12%2FIP_eid_timestamp_cnt_Dec12.csv.gz?Expires=1389469452&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=2WxWp6vtQ5%2BmUGJ6wrdRqr18sq4%3D'", "\n",
                "gunzip dec12_author.gz", "\n",
                "gunzip dec12_affiliation.gz", "\n",
                "sort dec12_author -o dec12_author", "\n",
                "sort dec12_affiliation -o dec12_affiliation", "\n",
                "wc -l dec12_author > dec12_author_cnt", "\n",
                "wc -l dec12_affiliation > dec12_affiliation_cnt", "\n",
                "cut -d , -f1 dec12_author > dec12_author_eids", "\n",
                "cut -d , -f1 dec12_affiliation > dec12_affiliation_eids", "\n",
                "cut -d , -f1,2 dec12_author > dec12_author_ts", "\n",
                "cut -d , -f1,2 dec12_affiliation > dec12_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec12_author > dec12_author_pc", "\n",
                "cut -d , -f1,3 dec12_affiliation > dec12_affiliation_pc", "\n",  
                "curl -o dec13_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-13%2FAP_eid_timestamp_cnt_Dec13.csv.gz?Expires=1389557191&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=HFTL1gYNUYLVwOcAznJndOywOZQ%3D'", "\n",
                "curl -o dec13_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-13%2FIP_eid_timestamp_cnt_Dec13.csv.gz?Expires=1389557191&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=r9gqQRAAccheMvvZapWARHVB3%2B8%3D'", "\n",
                "gunzip dec13_author.gz", "\n",
                "gunzip dec13_affiliation.gz", "\n",
                "sort dec13_author -o dec13_author", "\n",
                "sort dec13_affiliation -o dec13_affiliation", "\n",
                "wc -l dec13_author > dec13_author_cnt", "\n",
                "wc -l dec13_affiliation > dec13_affiliation_cnt", "\n",              
                "cut -d , -f1 dec13_author > dec13_author_eids", "\n",
                "cut -d , -f1 dec13_affiliation > dec13_affiliation_eids", "\n",
                "cut -d , -f1,2 dec13_author > dec13_author_ts", "\n",
                "cut -d , -f1,2 dec13_affiliation > dec13_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec13_author > dec13_author_pc", "\n",
                "cut -d , -f1,3 dec13_affiliation > dec13_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec12_author_eids dec13_author_eids > dec12_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec12_author_eids dec13_author_eids > dec13_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec12_affiliation_eids dec13_affiliation_eids > dec12_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec12_affiliation_eids dec13_affiliation_eids > dec13_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec12_author_ts dec13_author_ts > dec12_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec12_author_ts dec13_author_ts > dec13_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec12_affiliation_ts dec13_affiliation_ts > dec12_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec12_affiliation_ts dec13_affiliation_ts > dec13_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec12_author_pc dec13_author_pc > dec12_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec12_author_pc dec13_author_pc > dec13_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec12_affiliation_pc dec13_affiliation_pc > dec12_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec12_affiliation_pc dec13_affiliation_pc > dec13_affiliation_pc_unique", "\n",
                "wc -l dec12_author_eids_unique > dec12_author_eids_unique_cnt", "\n",
                "wc -l dec13_author_eids_unique > dec13_author_eids_unique_cnt", "\n",
                "wc -l dec12_affiliation_eids_unique > dec12_affiliation_eids_unique_cnt", "\n",
                "wc -l dec13_affiliation_eids_unique > dec13_affiliation_eids_unique_cnt", "\n",
                "wc -l dec12_author_ts_unique > dec12_author_ts_unique_cnt", "\n",
                "wc -l dec13_author_ts_unique > dec13_author_ts_unique_cnt", "\n",
                "wc -l dec12_affiliation_ts_unique > dec12_affiliation_ts_unique_cnt", "\n",
                "wc -l dec13_affiliation_ts_unique > dec13_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec12_author_pc_unique > dec12_author_pc_unique_cnt", "\n",
                "wc -l dec13_author_pc_unique > dec13_author_pc_unique_cnt", "\n",
                "wc -l dec12_affiliation_pc_unique > dec12_affiliation_pc_unique_cnt", "\n",
                "wc -l dec13_affiliation_pc_unique > dec13_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}