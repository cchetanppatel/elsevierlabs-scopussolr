{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec23_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-23%2FAP_eid_timestamp_cnt_Dec23.csv.gz?Expires=1396793266&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=rZhAW7KZ3AaiLGi6OJaf3DYQ5lY%3D'", "\n",
                "curl -o dec23_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-23%2FIP_eid_timestamp_cnt_Dec23.csv.gz?Expires=1396793266&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=rVF8zgePY4UgROlIh910FZCiGw4%3D'", "\n",
                "gunzip dec23_author.gz", "\n",
                "gunzip dec23_affiliation.gz", "\n",
                "sort dec23_author -o dec23_author", "\n",
                "sort dec23_affiliation -o dec23_affiliation", "\n",
                "wc -l dec23_author > dec23_author_cnt", "\n",
                "wc -l dec23_affiliation > dec23_affiliation_cnt", "\n",
                "cut -d , -f1 dec23_author > dec23_author_eids", "\n",
                "cut -d , -f1 dec23_affiliation > dec23_affiliation_eids", "\n",
                "cut -d , -f1,2 dec23_author > dec23_author_ts", "\n",
                "cut -d , -f1,2 dec23_affiliation > dec23_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec23_author > dec23_author_pc", "\n",
                "cut -d , -f1,3 dec23_affiliation > dec23_affiliation_pc", "\n",  
                "curl -o dec24_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-24%2FAP_eid_timestamp_cnt_Dec24.csv.gz?Expires=1396793662&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=B7f76f89a6%2BsLwpwvNkrFmKwB8U%3D'", "\n",
                "curl -o dec24_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-24%2FIP_eid_timestamp_cnt_Dec24.csv.gz?Expires=1396793662&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=RS8PtiW1xeGRoHBuu5U%2FQQWK%2BR0%3D'", "\n",
                "gunzip dec24_author.gz", "\n",
                "gunzip dec24_affiliation.gz", "\n",
                "sort dec24_author -o dec24_author", "\n",
                "sort dec24_affiliation -o dec24_affiliation", "\n",
                "wc -l dec24_author > dec24_author_cnt", "\n",
                "wc -l dec24_affiliation > dec24_affiliation_cnt", "\n",              
                "cut -d , -f1 dec24_author > dec24_author_eids", "\n",
                "cut -d , -f1 dec24_affiliation > dec24_affiliation_eids", "\n",
                "cut -d , -f1,2 dec24_author > dec24_author_ts", "\n",
                "cut -d , -f1,2 dec24_affiliation > dec24_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec24_author > dec24_author_pc", "\n",
                "cut -d , -f1,3 dec24_affiliation > dec24_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec23_author_eids dec24_author_eids > dec23_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec23_author_eids dec24_author_eids > dec24_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec23_affiliation_eids dec24_affiliation_eids > dec23_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec23_affiliation_eids dec24_affiliation_eids > dec24_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec23_author_ts dec24_author_ts > dec23_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec23_author_ts dec24_author_ts > dec24_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec23_affiliation_ts dec24_affiliation_ts > dec23_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec23_affiliation_ts dec24_affiliation_ts > dec24_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec23_author_pc dec24_author_pc > dec23_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec23_author_pc dec24_author_pc > dec24_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec23_affiliation_pc dec24_affiliation_pc > dec23_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec23_affiliation_pc dec24_affiliation_pc > dec24_affiliation_pc_unique", "\n",
                "wc -l dec23_author_eids_unique > dec23_author_eids_unique_cnt", "\n",
                "wc -l dec24_author_eids_unique > dec24_author_eids_unique_cnt", "\n",
                "wc -l dec23_affiliation_eids_unique > dec23_affiliation_eids_unique_cnt", "\n",
                "wc -l dec24_affiliation_eids_unique > dec24_affiliation_eids_unique_cnt", "\n",
                "wc -l dec23_author_ts_unique > dec23_author_ts_unique_cnt", "\n",
                "wc -l dec24_author_ts_unique > dec24_author_ts_unique_cnt", "\n",
                "wc -l dec23_affiliation_ts_unique > dec23_affiliation_ts_unique_cnt", "\n",
                "wc -l dec24_affiliation_ts_unique > dec24_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec23_author_pc_unique > dec23_author_pc_unique_cnt", "\n",
                "wc -l dec24_author_pc_unique > dec24_author_pc_unique_cnt", "\n",
                "wc -l dec23_affiliation_pc_unique > dec23_affiliation_pc_unique_cnt", "\n",
                "wc -l dec24_affiliation_pc_unique > dec24_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}