{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan08_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-08%2FAP_eid_timestamp_cnt_Jan08.csv.gz?Expires=1396982241&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=aqYbEb2iHTIADyGIz4zuBhod%2B%2FQ%3D'", "\n",
                "curl -o jan08_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-08%2FIP_eid_timestamp_cnt_Jan08.csv.gz?Expires=1396982241&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=%2BQFVTK6tsrliQe3uhpWpUbuq9f0%3D'", "\n",
                "gunzip jan08_author.gz", "\n",
                "gunzip jan08_affiliation.gz", "\n",
                "sort jan08_author -o jan08_author", "\n",
                "sort jan08_affiliation -o jan08_affiliation", "\n",
                "wc -l jan08_author > jan08_author_cnt", "\n",
                "wc -l jan08_affiliation > jan08_affiliation_cnt", "\n",
                "cut -d , -f1 jan08_author > jan08_author_eids", "\n",
                "cut -d , -f1 jan08_affiliation > jan08_affiliation_eids", "\n",
                "cut -d , -f1,2 jan08_author > jan08_author_ts", "\n",
                "cut -d , -f1,2 jan08_affiliation > jan08_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan08_author > jan08_author_pc", "\n",
                "cut -d , -f1,3 jan08_affiliation > jan08_affiliation_pc", "\n",  
                "curl -o jan09_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-09%2FAP_eid_timestamp_cnt_Jan09.csv.gz?Expires=1397080564&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=zbeoHb1o7nx5D87xmyXsuZ5MaF0%3D'", "\n",
                "curl -o jan09_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-09%2FIP_eid_timestamp_cnt_Jan09.csv.gz?Expires=1397080564&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=OV2jCit3cfUymCoGPcXN5rnEaLo%3D'", "\n",
                "gunzip jan09_author.gz", "\n",
                "gunzip jan09_affiliation.gz", "\n",
                "sort jan09_author -o jan09_author", "\n",
                "sort jan09_affiliation -o jan09_affiliation", "\n",
                "wc -l jan09_author > jan09_author_cnt", "\n",
                "wc -l jan09_affiliation > jan09_affiliation_cnt", "\n",              
                "cut -d , -f1 jan09_author > jan09_author_eids", "\n",
                "cut -d , -f1 jan09_affiliation > jan09_affiliation_eids", "\n",
                "cut -d , -f1,2 jan09_author > jan09_author_ts", "\n",
                "cut -d , -f1,2 jan09_affiliation > jan09_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan09_author > jan09_author_pc", "\n",
                "cut -d , -f1,3 jan09_affiliation > jan09_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan08_author_eids jan09_author_eids > jan08_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan08_author_eids jan09_author_eids > jan09_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan08_affiliation_eids jan09_affiliation_eids > jan08_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan08_affiliation_eids jan09_affiliation_eids > jan09_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan08_author_ts jan09_author_ts > jan08_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan08_author_ts jan09_author_ts > jan09_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan08_affiliation_ts jan09_affiliation_ts > jan08_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan08_affiliation_ts jan09_affiliation_ts > jan09_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan08_author_pc jan09_author_pc > jan08_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan08_author_pc jan09_author_pc > jan09_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan08_affiliation_pc jan09_affiliation_pc > jan08_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan08_affiliation_pc jan09_affiliation_pc > jan09_affiliation_pc_unique", "\n",
                "wc -l jan08_author_eids_unique > jan08_author_eids_unique_cnt", "\n",
                "wc -l jan09_author_eids_unique > jan09_author_eids_unique_cnt", "\n",
                "wc -l jan08_affiliation_eids_unique > jan08_affiliation_eids_unique_cnt", "\n",
                "wc -l jan09_affiliation_eids_unique > jan09_affiliation_eids_unique_cnt", "\n",
                "wc -l jan08_author_ts_unique > jan08_author_ts_unique_cnt", "\n",
                "wc -l jan09_author_ts_unique > jan09_author_ts_unique_cnt", "\n",
                "wc -l jan08_affiliation_ts_unique > jan08_affiliation_ts_unique_cnt", "\n",
                "wc -l jan09_affiliation_ts_unique > jan09_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan08_author_pc_unique > jan08_author_pc_unique_cnt", "\n",
                "wc -l jan09_author_pc_unique > jan09_author_pc_unique_cnt", "\n",
                "wc -l jan08_affiliation_pc_unique > jan08_affiliation_pc_unique_cnt", "\n",
                "wc -l jan09_affiliation_pc_unique > jan09_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}