{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec05_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-05%2FAP_eid_timestamp_cnt_Dec05.csv.gz?Expires=1388863771&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=2mhc1dQmTSgBElDDaUtd%2BT8%2FbV8%3D'", "\n",
                "curl -o dec05_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-05%2FIP_eid_timestamp_cnt_Dec05.csv.gz?Expires=1388863771&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Y1jb%2BdNhA37Yfzk6LfJEazgjXSc%3D'", "\n",
                "gunzip dec05_author.gz", "\n",
                "gunzip dec05_affiliation.gz", "\n",
                "sort dec05_author -o dec05_author", "\n",
                "sort dec05_affiliation -o dec05_affiliation", "\n",
                "wc -l dec05_author > dec05_author_cnt", "\n",
                "wc -l dec05_affiliation > dec05_affiliation_cnt", "\n",
                "cut -d , -f1 dec05_author > dec05_author_eids", "\n",
                "cut -d , -f1 dec05_affiliation > dec05_affiliation_eids", "\n",
                "cut -d , -f1,2 dec05_author > dec05_author_ts", "\n",
                "cut -d , -f1,2 dec05_affiliation > dec05_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec05_author > dec05_author_pc", "\n",
                "cut -d , -f1,3 dec05_affiliation > dec05_affiliation_pc", "\n",  
                "curl -o dec06_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-06%2FAP_eid_timestamp_cnt_Dec06.csv.gz?Expires=1389190675&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=eM7hIIrWtqeEka6coWCpiR8pqEo%3D'", "\n",
                "curl -o dec06_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-06%2FIP_eid_timestamp_cnt_Dec06.csv.gz?Expires=1389190676&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=B4XgP5l1qGuCIcfQpyC2snKojFw%3D'", "\n",
                "gunzip dec06_author.gz", "\n",
                "gunzip dec06_affiliation.gz", "\n",
                "sort dec06_author -o dec06_author", "\n",
                "sort dec06_affiliation -o dec06_affiliation", "\n",
                "wc -l dec06_author > dec06_author_cnt", "\n",
                "wc -l dec06_affiliation > dec06_affiliation_cnt", "\n",              
                "cut -d , -f1 dec06_author > dec06_author_eids", "\n",
                "cut -d , -f1 dec06_affiliation > dec06_affiliation_eids", "\n",
                "cut -d , -f1,2 dec06_author > dec06_author_ts", "\n",
                "cut -d , -f1,2 dec06_affiliation > dec06_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec06_author > dec06_author_pc", "\n",
                "cut -d , -f1,3 dec06_affiliation > dec06_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec05_author_eids dec06_author_eids > dec05_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec05_author_eids dec06_author_eids > dec06_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec05_affiliation_eids dec06_affiliation_eids > dec05_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec05_affiliation_eids dec06_affiliation_eids > dec06_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec05_author_ts dec06_author_ts > dec05_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec05_author_ts dec06_author_ts > dec06_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec05_affiliation_ts dec06_affiliation_ts > dec05_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec05_affiliation_ts dec06_affiliation_ts > dec06_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec05_author_pc dec06_author_pc > dec05_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec05_author_pc dec06_author_pc > dec06_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec05_affiliation_pc dec06_affiliation_pc > dec05_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec05_affiliation_pc dec06_affiliation_pc > dec06_affiliation_pc_unique", "\n",
                "wc -l dec05_author_eids_unique > dec05_author_eids_unique_cnt", "\n",
                "wc -l dec06_author_eids_unique > dec06_author_eids_unique_cnt", "\n",
                "wc -l dec05_affiliation_eids_unique > dec05_affiliation_eids_unique_cnt", "\n",
                "wc -l dec06_affiliation_eids_unique > dec06_affiliation_eids_unique_cnt", "\n",
                "wc -l dec05_author_ts_unique > dec05_author_ts_unique_cnt", "\n",
                "wc -l dec06_author_ts_unique > dec06_author_ts_unique_cnt", "\n",
                "wc -l dec05_affiliation_ts_unique > dec05_affiliation_ts_unique_cnt", "\n",
                "wc -l dec06_affiliation_ts_unique > dec06_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec05_author_pc_unique > dec05_author_pc_unique_cnt", "\n",
                "wc -l dec06_author_pc_unique > dec06_author_pc_unique_cnt", "\n",
                "wc -l dec05_affiliation_pc_unique > dec05_affiliation_pc_unique_cnt", "\n",
                "wc -l dec06_affiliation_pc_unique > dec06_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}