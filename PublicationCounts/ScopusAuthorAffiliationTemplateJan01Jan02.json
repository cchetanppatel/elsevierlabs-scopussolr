{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan01_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-01%2FAP_eid_timestamp_cnt_Jan01.csv.gz?Expires=1396806211&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=TOlP7dcUI%2BKQrEr1ZnQytWilCh8%3D'", "\n",
                "curl -o jan01_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-01%2FIP_eid_timestamp_cnt_Jan01.csv.gz?Expires=1396806211&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=n8qZeopVRIXAls8XHfD056vlO5E%3D'", "\n",
                "gunzip jan01_author.gz", "\n",
                "gunzip jan01_affiliation.gz", "\n",
                "sort jan01_author -o jan01_author", "\n",
                "sort jan01_affiliation -o jan01_affiliation", "\n",
                "wc -l jan01_author > jan01_author_cnt", "\n",
                "wc -l jan01_affiliation > jan01_affiliation_cnt", "\n",
                "cut -d , -f1 jan01_author > jan01_author_eids", "\n",
                "cut -d , -f1 jan01_affiliation > jan01_affiliation_eids", "\n",
                "cut -d , -f1,2 jan01_author > jan01_author_ts", "\n",
                "cut -d , -f1,2 jan01_affiliation > jan01_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan01_author > jan01_author_pc", "\n",
                "cut -d , -f1,3 jan01_affiliation > jan01_affiliation_pc", "\n",  
                "curl -o jan02_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-02%2FAP_eid_timestamp_cnt_Jan02.csv.gz?Expires=1396807143&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=WZJ44LoI%2B0II%2FgnBlAkfFy0qr5c%3D'", "\n",
                "curl -o jan02_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-02%2FIP_eid_timestamp_cnt_Jan02.csv.gz?Expires=1396807143&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=BEht8tBlE92c5ZR6zkUdDXYQ4nw%3D'", "\n",
                "gunzip jan02_author.gz", "\n",
                "gunzip jan02_affiliation.gz", "\n",
                "sort jan02_author -o jan02_author", "\n",
                "sort jan02_affiliation -o jan02_affiliation", "\n",
                "wc -l jan02_author > jan02_author_cnt", "\n",
                "wc -l jan02_affiliation > jan02_affiliation_cnt", "\n",              
                "cut -d , -f1 jan02_author > jan02_author_eids", "\n",
                "cut -d , -f1 jan02_affiliation > jan02_affiliation_eids", "\n",
                "cut -d , -f1,2 jan02_author > jan02_author_ts", "\n",
                "cut -d , -f1,2 jan02_affiliation > jan02_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan02_author > jan02_author_pc", "\n",
                "cut -d , -f1,3 jan02_affiliation > jan02_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan01_author_eids jan02_author_eids > jan01_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan01_author_eids jan02_author_eids > jan02_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan01_affiliation_eids jan02_affiliation_eids > jan01_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan01_affiliation_eids jan02_affiliation_eids > jan02_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan01_author_ts jan02_author_ts > jan01_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan01_author_ts jan02_author_ts > jan02_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan01_affiliation_ts jan02_affiliation_ts > jan01_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan01_affiliation_ts jan02_affiliation_ts > jan02_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan01_author_pc jan02_author_pc > jan01_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan01_author_pc jan02_author_pc > jan02_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan01_affiliation_pc jan02_affiliation_pc > jan01_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan01_affiliation_pc jan02_affiliation_pc > jan02_affiliation_pc_unique", "\n",
                "wc -l jan01_author_eids_unique > jan01_author_eids_unique_cnt", "\n",
                "wc -l jan02_author_eids_unique > jan02_author_eids_unique_cnt", "\n",
                "wc -l jan01_affiliation_eids_unique > jan01_affiliation_eids_unique_cnt", "\n",
                "wc -l jan02_affiliation_eids_unique > jan02_affiliation_eids_unique_cnt", "\n",
                "wc -l jan01_author_ts_unique > jan01_author_ts_unique_cnt", "\n",
                "wc -l jan02_author_ts_unique > jan02_author_ts_unique_cnt", "\n",
                "wc -l jan01_affiliation_ts_unique > jan01_affiliation_ts_unique_cnt", "\n",
                "wc -l jan02_affiliation_ts_unique > jan02_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan01_author_pc_unique > jan01_author_pc_unique_cnt", "\n",
                "wc -l jan02_author_pc_unique > jan02_author_pc_unique_cnt", "\n",
                "wc -l jan01_affiliation_pc_unique > jan01_affiliation_pc_unique_cnt", "\n",
                "wc -l jan02_affiliation_pc_unique > jan02_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}