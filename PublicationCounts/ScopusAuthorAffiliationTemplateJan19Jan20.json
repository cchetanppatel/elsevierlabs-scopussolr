{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan19_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-19%2FAP_eid_timestamp_cnt_Jan19.csv.gz?Expires=1398085547&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=h%2B%2Fi97NW2tLFHFQicFWLX04bTWw%3D'", "\n",
                "curl -o jan19_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-19%2FIP_eid_timestamp_cnt_Jan19.csv.gz?Expires=1398085546&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=D%2Bms0GXFjeB34MD5fu7AieZ7lCA%3D'", "\n",
                "gunzip jan19_author.gz", "\n",
                "gunzip jan19_affiliation.gz", "\n",
                "sort jan19_author -o jan19_author", "\n",
                "sort jan19_affiliation -o jan19_affiliation", "\n",
                "wc -l jan19_author > jan19_author_cnt", "\n",
                "wc -l jan19_affiliation > jan19_affiliation_cnt", "\n",
                "cut -d , -f1 jan19_author > jan19_author_eids", "\n",
                "cut -d , -f1 jan19_affiliation > jan19_affiliation_eids", "\n",
                "cut -d , -f1,2 jan19_author > jan19_author_ts", "\n",
                "cut -d , -f1,2 jan19_affiliation > jan19_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan19_author > jan19_author_pc", "\n",
                "cut -d , -f1,3 jan19_affiliation > jan19_affiliation_pc", "\n",  
                "curl -o jan20_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-20%2FAP_eid_timestamp_cnt_Jan20.csv.gz?Expires=1398087437&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=5K2Kf2oSxxpbmkVhYvhNLrYLb40%3D'", "\n",
                "curl -o jan20_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-20%2FIP_eid_timestamp_cnt_Jan20.csv.gz?Expires=1398087437&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=%2B0FsZ6nLRrb9bhkKyaegjjzdZOA%3D'", "\n",
                "gunzip jan20_author.gz", "\n",
                "gunzip jan20_affiliation.gz", "\n",
                "sort jan20_author -o jan20_author", "\n",
                "sort jan20_affiliation -o jan20_affiliation", "\n",
                "wc -l jan20_author > jan20_author_cnt", "\n",
                "wc -l jan20_affiliation > jan20_affiliation_cnt", "\n",              
                "cut -d , -f1 jan20_author > jan20_author_eids", "\n",
                "cut -d , -f1 jan20_affiliation > jan20_affiliation_eids", "\n",
                "cut -d , -f1,2 jan20_author > jan20_author_ts", "\n",
                "cut -d , -f1,2 jan20_affiliation > jan20_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan20_author > jan20_author_pc", "\n",
                "cut -d , -f1,3 jan20_affiliation > jan20_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan19_author_eids jan20_author_eids > jan19_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan19_author_eids jan20_author_eids > jan20_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan19_affiliation_eids jan20_affiliation_eids > jan19_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan19_affiliation_eids jan20_affiliation_eids > jan20_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan19_author_ts jan20_author_ts > jan19_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan19_author_ts jan20_author_ts > jan20_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan19_affiliation_ts jan20_affiliation_ts > jan19_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan19_affiliation_ts jan20_affiliation_ts > jan20_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan19_author_pc jan20_author_pc > jan19_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan19_author_pc jan20_author_pc > jan20_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan19_affiliation_pc jan20_affiliation_pc > jan19_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan19_affiliation_pc jan20_affiliation_pc > jan20_affiliation_pc_unique", "\n",
                "wc -l jan19_author_eids_unique > jan19_author_eids_unique_cnt", "\n",
                "wc -l jan20_author_eids_unique > jan20_author_eids_unique_cnt", "\n",
                "wc -l jan19_affiliation_eids_unique > jan19_affiliation_eids_unique_cnt", "\n",
                "wc -l jan20_affiliation_eids_unique > jan20_affiliation_eids_unique_cnt", "\n",
                "wc -l jan19_author_ts_unique > jan19_author_ts_unique_cnt", "\n",
                "wc -l jan20_author_ts_unique > jan20_author_ts_unique_cnt", "\n",
                "wc -l jan19_affiliation_ts_unique > jan19_affiliation_ts_unique_cnt", "\n",
                "wc -l jan20_affiliation_ts_unique > jan20_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan19_author_pc_unique > jan19_author_pc_unique_cnt", "\n",
                "wc -l jan20_author_pc_unique > jan20_author_pc_unique_cnt", "\n",
                "wc -l jan19_affiliation_pc_unique > jan19_affiliation_pc_unique_cnt", "\n",
                "wc -l jan20_affiliation_pc_unique > jan20_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}