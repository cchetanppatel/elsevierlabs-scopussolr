{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o jan13_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-13%2FAP_eid_timestamp_cnt_Jan13.csv.gz?Expires=1397427395&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=ue94pKoTltmDxgnGJOuZy9tYPqg%3D'", "\n",
                "curl -o jan13_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-13%2FIP_eid_timestamp_cnt_Jan13.csv.gz?Expires=1397427395&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=nuwctQMRhde86DVRnm%2BDiaB2OLs%3D'", "\n",
                "gunzip jan13_author.gz", "\n",
                "gunzip jan13_affiliation.gz", "\n",
                "sort jan13_author -o jan13_author", "\n",
                "sort jan13_affiliation -o jan13_affiliation", "\n",
                "wc -l jan13_author > jan13_author_cnt", "\n",
                "wc -l jan13_affiliation > jan13_affiliation_cnt", "\n",
                "cut -d , -f1 jan13_author > jan13_author_eids", "\n",
                "cut -d , -f1 jan13_affiliation > jan13_affiliation_eids", "\n",
                "cut -d , -f1,2 jan13_author > jan13_author_ts", "\n",
                "cut -d , -f1,2 jan13_affiliation > jan13_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan13_author > jan13_author_pc", "\n",
                "cut -d , -f1,3 jan13_affiliation > jan13_affiliation_pc", "\n",  
                "curl -o jan14_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-14%2FAP_eid_timestamp_cnt_Jan14.csv.gz?Expires=1397681456&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=hX8BuL%2FxgSPxMVeyCN%2BmgLFZKws%3D'", "\n",
                "curl -o jan14_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2014-01-14%2FIP_eid_timestamp_cnt_Jan14.csv.gz?Expires=1397681456&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=xjDpTuhCdyKz0vfRFVEocnZzIY4%3D'", "\n",
                "gunzip jan14_author.gz", "\n",
                "gunzip jan14_affiliation.gz", "\n",
                "sort jan14_author -o jan14_author", "\n",
                "sort jan14_affiliation -o jan14_affiliation", "\n",
                "wc -l jan14_author > jan14_author_cnt", "\n",
                "wc -l jan14_affiliation > jan14_affiliation_cnt", "\n",              
                "cut -d , -f1 jan14_author > jan14_author_eids", "\n",
                "cut -d , -f1 jan14_affiliation > jan14_affiliation_eids", "\n",
                "cut -d , -f1,2 jan14_author > jan14_author_ts", "\n",
                "cut -d , -f1,2 jan14_affiliation > jan14_affiliation_ts", "\n",        
                "cut -d , -f1,3 jan14_author > jan14_author_pc", "\n",
                "cut -d , -f1,3 jan14_affiliation > jan14_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order jan13_author_eids jan14_author_eids > jan13_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan13_author_eids jan14_author_eids > jan14_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order jan13_affiliation_eids jan14_affiliation_eids > jan13_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order jan13_affiliation_eids jan14_affiliation_eids > jan14_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order jan13_author_ts jan14_author_ts > jan13_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan13_author_ts jan14_author_ts > jan14_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order jan13_affiliation_ts jan14_affiliation_ts > jan13_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order jan13_affiliation_ts jan14_affiliation_ts > jan14_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order jan13_author_pc jan14_author_pc > jan13_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan13_author_pc jan14_author_pc > jan14_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order jan13_affiliation_pc jan14_affiliation_pc > jan13_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order jan13_affiliation_pc jan14_affiliation_pc > jan14_affiliation_pc_unique", "\n",
                "wc -l jan13_author_eids_unique > jan13_author_eids_unique_cnt", "\n",
                "wc -l jan14_author_eids_unique > jan14_author_eids_unique_cnt", "\n",
                "wc -l jan13_affiliation_eids_unique > jan13_affiliation_eids_unique_cnt", "\n",
                "wc -l jan14_affiliation_eids_unique > jan14_affiliation_eids_unique_cnt", "\n",
                "wc -l jan13_author_ts_unique > jan13_author_ts_unique_cnt", "\n",
                "wc -l jan14_author_ts_unique > jan14_author_ts_unique_cnt", "\n",
                "wc -l jan13_affiliation_ts_unique > jan13_affiliation_ts_unique_cnt", "\n",
                "wc -l jan14_affiliation_ts_unique > jan14_affiliation_ts_unique_cnt", "\n",                
                "wc -l jan13_author_pc_unique > jan13_author_pc_unique_cnt", "\n",
                "wc -l jan14_author_pc_unique > jan14_author_pc_unique_cnt", "\n",
                "wc -l jan13_affiliation_pc_unique > jan13_affiliation_pc_unique_cnt", "\n",
                "wc -l jan14_affiliation_pc_unique > jan14_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}