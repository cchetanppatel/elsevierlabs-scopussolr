{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o dec14_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-14%2FAP_eid_timestamp_cnt_Dec14.csv.gz?Expires=1389797820&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=um29KNGR1yyEvgndoWGWc9H%2Bw0g%3D'", "\n",
                "curl -o dec14_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-14%2FIP_eid_timestamp_cnt_Dec14.csv.gz?Expires=1389797820&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=TtIzVd%2BZsIQcIg%2BNMmquaVM6A%2FA%3D'", "\n",
                "gunzip dec14_author.gz", "\n",
                "gunzip dec14_affiliation.gz", "\n",
                "sort dec14_author -o dec14_author", "\n",
                "sort dec14_affiliation -o dec14_affiliation", "\n",
                "wc -l dec14_author > dec14_author_cnt", "\n",
                "wc -l dec14_affiliation > dec14_affiliation_cnt", "\n",
                "cut -d , -f1 dec14_author > dec14_author_eids", "\n",
                "cut -d , -f1 dec14_affiliation > dec14_affiliation_eids", "\n",
                "cut -d , -f1,2 dec14_author > dec14_author_ts", "\n",
                "cut -d , -f1,2 dec14_affiliation > dec14_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec14_author > dec14_author_pc", "\n",
                "cut -d , -f1,3 dec14_affiliation > dec14_affiliation_pc", "\n",  
                "curl -o dec15_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-15%2FAP_eid_timestamp_cnt_Dec15.csv.gz?Expires=1389798787&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=CompeWa1qVaNKuHp3aIKEAu26gI%3D'", "\n",
                "curl -o dec15_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-12-15%2FIP_eid_timestamp_cnt_Dec15.csv.gz?Expires=1389798788&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=Xf0jwy%2FEViFsa2sRa9OSTcuMsGE%3D'", "\n",
                "gunzip dec15_author.gz", "\n",
                "gunzip dec15_affiliation.gz", "\n",
                "sort dec15_author -o dec15_author", "\n",
                "sort dec15_affiliation -o dec15_affiliation", "\n",
                "wc -l dec15_author > dec15_author_cnt", "\n",
                "wc -l dec15_affiliation > dec15_affiliation_cnt", "\n",              
                "cut -d , -f1 dec15_author > dec15_author_eids", "\n",
                "cut -d , -f1 dec15_affiliation > dec15_affiliation_eids", "\n",
                "cut -d , -f1,2 dec15_author > dec15_author_ts", "\n",
                "cut -d , -f1,2 dec15_affiliation > dec15_affiliation_ts", "\n",        
                "cut -d , -f1,3 dec15_author > dec15_author_pc", "\n",
                "cut -d , -f1,3 dec15_affiliation > dec15_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order dec14_author_eids dec15_author_eids > dec14_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec14_author_eids dec15_author_eids > dec15_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order dec14_affiliation_eids dec15_affiliation_eids > dec14_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order dec14_affiliation_eids dec15_affiliation_eids > dec15_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order dec14_author_ts dec15_author_ts > dec14_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec14_author_ts dec15_author_ts > dec15_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order dec14_affiliation_ts dec15_affiliation_ts > dec14_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order dec14_affiliation_ts dec15_affiliation_ts > dec15_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order dec14_author_pc dec15_author_pc > dec14_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec14_author_pc dec15_author_pc > dec15_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order dec14_affiliation_pc dec15_affiliation_pc > dec14_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order dec14_affiliation_pc dec15_affiliation_pc > dec15_affiliation_pc_unique", "\n",
                "wc -l dec14_author_eids_unique > dec14_author_eids_unique_cnt", "\n",
                "wc -l dec15_author_eids_unique > dec15_author_eids_unique_cnt", "\n",
                "wc -l dec14_affiliation_eids_unique > dec14_affiliation_eids_unique_cnt", "\n",
                "wc -l dec15_affiliation_eids_unique > dec15_affiliation_eids_unique_cnt", "\n",
                "wc -l dec14_author_ts_unique > dec14_author_ts_unique_cnt", "\n",
                "wc -l dec15_author_ts_unique > dec15_author_ts_unique_cnt", "\n",
                "wc -l dec14_affiliation_ts_unique > dec14_affiliation_ts_unique_cnt", "\n",
                "wc -l dec15_affiliation_ts_unique > dec15_affiliation_ts_unique_cnt", "\n",                
                "wc -l dec14_author_pc_unique > dec14_author_pc_unique_cnt", "\n",
                "wc -l dec15_author_pc_unique > dec15_author_pc_unique_cnt", "\n",
                "wc -l dec14_affiliation_pc_unique > dec14_affiliation_pc_unique_cnt", "\n",
                "wc -l dec15_affiliation_pc_unique > dec15_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}