{
  "AWSTemplateFormatVersion" : "2010-09-09",
  
  "Description" : "Template to start up a machine to compare author and affiliation counts",
  
  "Parameters" : {
      
    "KeyName" : {
      "Description" : "Name of an existing EC2 KeyPair to enable SSH access to the instances",
      "Type" : "String",
      "Default" : "ats",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern" : "[-_ a-zA-Z0-9]*",
      "ConstraintDescription" : "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    
    "InstanceType" : {
      "Description" : "EC2 instance type",
      "Type" : "String",
      "Default" : "m1.large",
      "AllowedValues" : [ "m1.large" ],
      "ConstraintDescription" : "must be a valid EC2 instance type in the AWSInstanceType2AMI Mappings."
    },
    
    "EphemeralMntPoint" : {
      "Description" : "Where to mount the first ephemeral drive.",
      "Type" : "String",
      "Default" : "/mnt/data"
    }
    
  },
  
"Mappings" : {
    "AWSInstanceType2AMI" : {
      "t1.micro" : { "AMI" : "ami-100c6b79"},
      "m1.small" : { "AMI" : "ami-100c6b79"},
      "m1.medium" : { "AMI" : "ami-100c6b79"},
      "m1.large" : { "AMI" : "ami-100c6b79"},
      "m1.xlarge" : { "AMI" : "ami-100c6b79"},
      "c1.medium" : { "AMI" : "ami-100c6b79"},
      "c1.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.2xlarge" : { "AMI" : "ami-100c6b79"},
      "m2.4xlarge" : { "AMI" : "ami-100c6b79"}
    }
  },

 "Resources": {
                
        "Ec2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSInstanceType2AMI",
                        {
                            "Ref" : "InstanceType"
                        },
                        "AMI"
                    ]
                },
                "BlockDeviceMappings" : [ {"DeviceName" : "/dev/sdk", "VirtualName" : "ephemeral0"} ],
                "SecurityGroups" : [ { "Ref" : "InstanceSecurityGroup" } ],
                "KeyName" : { "Ref" : "KeyName" },
                "InstanceType" : { "Ref" : "InstanceType" },
                "UserData" : { "Fn::Base64" : { "Fn::Join" : ["",[
                "#!/bin/bash -ex","\n",
                "yum -y update", "\n",
                "rm /etc/localtime", "\n",
                "ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime", "\n",
                "# Set up the ephemeral drives and mount them", "\n",
                "mkdir -p ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "mount -o rw,user /dev/sdk ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "cd ", { "Ref" : "EphemeralMntPoint" }, "\n",
                "curl -o nov29_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-29%2FAP_eid_timestamp_cnt_Nov29.csv.gz?Expires=1388601277&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=iHD0qeL2orIUj1GvF2MPk%2FcLBiM%3D'", "\n",
                "curl -o nov29_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-29%2FIP_eid_timestamp_cnt_Nov29.csv.gz?Expires=1388601278&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=MzK%2FwfBKwPVEgL3jehkJmtqMOyI%3D'", "\n",
                "gunzip nov29_author.gz", "\n",
                "gunzip nov29_affiliation.gz", "\n",
                "sort nov29_author -o nov29_author", "\n",
                "sort nov29_affiliation -o nov29_affiliation", "\n",
                "wc -l nov29_author > nov29_author_cnt", "\n",
                "wc -l nov29_affiliation > nov29_affiliation_cnt", "\n",
                "cut -d , -f1 nov29_author > nov29_author_eids", "\n",
                "cut -d , -f1 nov29_affiliation > nov29_affiliation_eids", "\n",
                "cut -d , -f1,2 nov29_author > nov29_author_ts", "\n",
                "cut -d , -f1,2 nov29_affiliation > nov29_affiliation_ts", "\n",        
                "cut -d , -f1,3 nov29_author > nov29_author_pc", "\n",
                "cut -d , -f1,3 nov29_affiliation > nov29_affiliation_pc", "\n",  
                "curl -o nov30_author.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-30%2FAP_eid_timestamp_cnt_Nov30.csv.gz?Expires=1388602045&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=sPVfYLHhRUePQj3qkQns5zBkk10%3D'", "\n",
                "curl -o nov30_affiliation.gz 'https://s3.amazonaws.com/prod-ScopusCustomData/%2Fscopus-hothouse%2F2013-11-30%2FIP_eid_timestamp_cnt_Nov30.csv.gz?Expires=1388602045&AWSAccessKeyId=AKIAIHQUVINAQPR2KJPQ&Signature=xC29eZX4WRs1H4AxqmFCQVpYFxY%3D'", "\n",
                "gunzip nov30_author.gz", "\n",
                "gunzip nov30_affiliation.gz", "\n",
                "sort nov30_author -o nov30_author", "\n",
                "sort nov30_affiliation -o nov30_affiliation", "\n",
                "wc -l nov30_author > nov30_author_cnt", "\n",
                "wc -l nov30_affiliation > nov30_affiliation_cnt", "\n",              
                "cut -d , -f1 nov30_author > nov30_author_eids", "\n",
                "cut -d , -f1 nov30_affiliation > nov30_affiliation_eids", "\n",
                "cut -d , -f1,2 nov30_author > nov30_author_ts", "\n",
                "cut -d , -f1,2 nov30_affiliation > nov30_affiliation_ts", "\n",        
                "cut -d , -f1,3 nov30_author > nov30_author_pc", "\n",
                "cut -d , -f1,3 nov30_affiliation > nov30_affiliation_pc", "\n",                 
                "comm -2 -3  --nocheck-order nov29_author_eids nov30_author_eids > nov29_author_eids_unique", "\n",
                "comm -1 -3  --nocheck-order nov29_author_eids nov30_author_eids > nov30_author_eids_unique", "\n",                
                "comm -2 -3  --nocheck-order nov29_affiliation_eids nov30_affiliation_eids > nov29_affiliation_eids_unique", "\n",
                "comm -1 -3  --nocheck-order nov29_affiliation_eids nov30_affiliation_eids > nov30_affiliation_eids_unique", "\n",   
                "comm -2 -3  --nocheck-order nov29_author_ts nov30_author_ts > nov29_author_ts_unique", "\n",
                "comm -1 -3  --nocheck-order nov29_author_ts nov30_author_ts > nov30_author_ts_unique", "\n",                
                "comm -2 -3  --nocheck-order nov29_affiliation_ts nov30_affiliation_ts > nov29_affiliation_ts_unique", "\n",
                "comm -1 -3  --nocheck-order nov29_affiliation_ts nov30_affiliation_ts > nov30_affiliation_ts_unique", "\n", 
                "comm -2 -3  --nocheck-order nov29_author_pc nov30_author_pc > nov29_author_pc_unique", "\n",
                "comm -1 -3  --nocheck-order nov29_author_pc nov30_author_pc > nov30_author_pc_unique", "\n",                
                "comm -2 -3  --nocheck-order nov29_affiliation_pc nov30_affiliation_pc > nov29_affiliation_pc_unique", "\n",
                "comm -1 -3  --nocheck-order nov29_affiliation_pc nov30_affiliation_pc > nov30_affiliation_pc_unique", "\n",
                "wc -l nov29_author_eids_unique > nov29_author_eids_unique_cnt", "\n",
                "wc -l nov30_author_eids_unique > nov30_author_eids_unique_cnt", "\n",
                "wc -l nov29_affiliation_eids_unique > nov29_affiliation_eids_unique_cnt", "\n",
                "wc -l nov30_affiliation_eids_unique > nov30_affiliation_eids_unique_cnt", "\n",
                "wc -l nov29_author_ts_unique > nov29_author_ts_unique_cnt", "\n",
                "wc -l nov30_author_ts_unique > nov30_author_ts_unique_cnt", "\n",
                "wc -l nov29_affiliation_ts_unique > nov29_affiliation_ts_unique_cnt", "\n",
                "wc -l nov30_affiliation_ts_unique > nov30_affiliation_ts_unique_cnt", "\n",                
                "wc -l nov29_author_pc_unique > nov29_author_pc_unique_cnt", "\n",
                "wc -l nov30_author_pc_unique > nov30_author_pc_unique_cnt", "\n",
                "wc -l nov29_affiliation_pc_unique > nov29_affiliation_pc_unique_cnt", "\n",
                "wc -l nov30_affiliation_pc_unique > nov30_affiliation_pc_unique_cnt"          
                ]]}}
            }
        },
 		
        "InstanceSecurityGroup" : {
        "Type" : "AWS::EC2::SecurityGroup",
        "Properties" : {
        "GroupDescription" : "Enable SSH access on the inbound port",
             "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }]
           }
        }
    
 },


  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "Ec2Instance" }
    },
    
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "AvailabilityZone" ] }
    },
    
    "PublicIP" : {
      "Description" : "Public IP address of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
    }
    
  }
  
}